{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>What's new</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="blog_area section_padding" style="background-color: #ffffff; padding: 60px 0;">
    <div class="container">
        <div class="row">
            {% if blogs|length > 0 %}
                {% for blog in blogs %}
                    <div class="col-lg-12 mb-5">
                        <div class="d-flex flex-wrap align-items-start shadow-sm rounded-4 overflow-hidden">

                            <!-- LEFT: Image -->
                            <div class="blog-img-wrapper" style="flex: 0 0 35%; min-width: 250px;">
                                {% if blog.content %}
                                    <img src="{{ blog.content}}"
                                         class="img-fluid h-100 w-100"
                                         style="object-fit: cover;"
                                         alt="{{ blog.title }}">
                                {% else %}
                                    <img src="https://via.placeholder.com/400x300"
                                         class="img-fluid h-100 w-100"
                                         style="object-fit: cover;"
                                         alt="No Image">
                                {% endif %}
                            </div>

                            <!-- RIGHT: Content -->
                            <div class="blog-content-wrapper p-4" style="flex: 1;">
                                <h1 class="mb-2" style="color: #000000; font-weight: bold;">{{ blog.title }}</h1>

                                {% if blog.category %}
                                    <p class="text-muted mb-1">{{ blog.category }}</p>
                                {% endif %}
                                <small class="text-muted mb-3 d-block">{{ blog.createdAt|date('d M Y') }}</small>

                                <!-- Blog description -->
                                

                                <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-primary mt-2">Read More</a>

                                <!-- Comments Toggle Button -->
                                <button class="btn btn-link mt-3 p-0" type="button" onclick="toggleComments('comments-{{ blog.id }}')">
                                    Show/Hide Comments ({{ blog.comments|length }})
                                </button>

                                <!-- Comments Section -->
                                <div id="comments-{{ blog.id }}" class="mt-3" style="display: none; border-top: 1px solid #ddd; padding-top: 15px;">
                                    
                                   {% for comment in blog.comments %}
    <div class="comment mb-2" style="color: #000000;">
        <strong>{{ comment.user.nom }}</strong>:
        {{ comment.content }}
        <small class="ms-1" style="color: #000000;">{{ comment.createdAt|date('d M Y H:i') }}</small>
    </div>
{% else %}
    <p style="color: #000000;">No comments yet.</p>
{% endfor %}


                                    {% if app.user %}
                                        <form action="{{ path('app_blog_comment', {'id': blog.id}) }}" method="POST" class="mt-2">
                                            <div class="input-group">
                                                <input type="text" name="content" class="form-control" placeholder="Write a comment..." required>
                                                <button class="btn btn-primary" type="submit">Comment</button>
                                            </div>
                                        </form>
                                    {% else %}
                                        <p class="text-muted mt-2"><em>Login to comment.</em></p>
                                    {% endif %}
                                </div>

                            </div>

                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center w-100">No blogs found.</p>
            {% endif %}
        </div>
    </div>
</section>

<script>
function toggleComments(id) {
    const el = document.getElementById(id);
    el.style.display = (el.style.display === 'none' || el.style.display === '') ? 'block' : 'none';
}
</script>
{% endblock %}
