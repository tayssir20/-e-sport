{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>What's new</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog_area section_padding" style="background-color: #ffffff; padding: 60px 0;">
    <div class="container">

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mb-4" style="background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 6px; padding: 10px;">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger mb-4" style="background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 6px; padding: 10px;">
                {{ message }}
            </div>
        {% endfor %}

        <!-- Search Bar -->
        <div class="mb-5">
            <form method="GET" action="{{ path('app_blog_user_index') }}" class="row g-2 align-items-center">
                <!-- Title search -->
                <div class="col-sm-6 col-md-6">
                    <input type="text" name="title" class="form-control form-control-lg" 
                           placeholder="Search by title..." 
                           value="{{ app.request.get('title') }}">
                </div>

                <!-- Date picker -->
                <div class="col-sm-4 col-md-4">
                    <input type="date" name="date" class="form-control form-control-lg" 
                           value="{{ app.request.get('date') }}">
                </div>

                <!-- Search button -->
                <div class="col-sm-2 col-md-2 d-grid">
                    <button class="btn btn-primary btn-lg" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>

        <div class="row">
            {% if blogs|length > 0 %}
                {% for blog in blogs %}
                    <div class="col-lg-12 mb-5">
                        <div class="d-flex flex-wrap align-items-start shadow-sm rounded-4 overflow-hidden">

                            <!-- LEFT: Image -->
                            <div class="blog-img-wrapper" style="flex: 0 0 35%; min-width: 250px;">
                                {% if blog.content %}
                                    <img src="{{ blog.content}}"
                                         class="img-fluid h-100 w-100"
                                         style="object-fit: cover;"
                                         alt="{{ blog.title }}">
                                {% else %}
                                    <img src="https://via.placeholder.com/400x300"
                                         class="img-fluid h-100 w-100"
                                         style="object-fit: cover;"
                                         alt="No Image">
                                {% endif %}
                            </div>

                            <!-- RIGHT: Content -->
                            <div class="blog-content-wrapper p-4" style="flex: 1;">
                                <h1 class="mb-2" style="color: #000000; font-weight: bold;">{{ blog.title }}</h1>

                                {% if blog.category %}
                                    <p class="text-muted mb-1">{{ blog.category }}</p>
                                {% endif %}
                                <small class="text-muted mb-3 d-block">{{ blog.createdAt|date('d M Y') }}</small>

                                <!-- â­ RATING STARS ONLY -->
                                <div class="mb-3">
                                    {% set avgRating = blog.getAverageRating() %}
                                    {% for i in 1..5 %}
                                        <span style="font-size: 20px; color: {% if i <= avgRating %}#ffc107{% else %}#ccc{% endif %};">â˜…</span>
                                    {% endfor %}
                                </div>

                                <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-primary mt-2">Read More</a>

                                <!-- Comments Toggle Button -->
                                <button class="btn btn-link mt-3 p-0" type="button" onclick="toggleComments('comments-{{ blog.id }}')">
                                    Show/Hide Comments ({{ blog.comments|length }})
                                </button>

                                <!-- Comments Section -->
                                <div id="comments-{{ blog.id }}" class="mt-3" style="display: none; border-top: 1px solid #ddd; padding-top: 15px;">
                                    
                                    {% for comment in blog.comments %}
                                        <div class="comment mb-2" style="color: #000000;">
                                            <strong>{{ comment.user.nom }}</strong>:
                                            {{ comment.content }}
                                            <small class="ms-1" style="color: #000000;">{{ comment.createdAt|date('d M Y H:i') }}</small>
                                        </div>
                                    {% else %}
                                        <p style="color: #000000;">No comments yet.</p>
                                    {% endfor %}

                                    {% if app.user %}
                                        <!-- Formulaire de commentaire avec reCAPTCHA -->
                                        <form action="{{ path('app_blog_comment', {'id': blog.id}) }}" method="POST" class="mt-3">
                                            <div class="mb-2">
                                                <textarea name="content" class="form-control" rows="2" placeholder="Write your comment..." required></textarea>
                                            </div>
                                            
                                            <!-- ðŸ” reCAPTCHA Widget -->
                                            <div class="mb-2">
                                                <div class="g-recaptcha" data-sitekey="{{ app.request.server.get('EWZ_RECAPTCHA_SITE_KEY') | default('6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI') }}"></div>
                                            </div>
                                            
                                            <button type="submit" class="btn btn-primary btn-sm">Post Comment</button>
                                        </form>
                                    {% else %}
                                        <p class="text-muted mt-2"><em>Login to comment.</em></p>
                                    {% endif %}
                                </div>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center w-100">No blogs found.</p>
            {% endif %}
        </div>

        {# === AJOUT: PAGINATION === #}
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(blogs) }}
        </div>

    </div>
</section>

<!-- ðŸ” Script reCAPTCHA Google -->
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<script>
function toggleComments(id) {
    const el = document.getElementById(id);
    if (el) {
        el.style.display = (el.style.display === 'none' || el.style.display === '') ? 'block' : 'none';
    }
}

// Auto-hide alerts after 5 seconds
document.addEventListener('DOMContentLoaded', function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        setTimeout(() => {
            alert.style.transition = 'opacity 0.5s';
            alert.style.opacity = '0';
            setTimeout(() => alert.remove(), 500);
        }, 5000);
    });
});
</script>

<style>
/* Style pour le widget reCAPTCHA */
.g-recaptcha {
    margin: 10px 0;
    transform: scale(0.9);
    transform-origin: 0 0;
}

/* Responsive pour mobile */
@media (max-width: 480px) {
    .g-recaptcha {
        transform: scale(0.8);
        transform-origin: 0 0;
    }
}

/* Style pour les commentaires */
.comment {
    background-color: #f8f9fa;
    padding: 8px;
    border-radius: 6px;
    margin-bottom: 8px;
}

.comment:hover {
    background-color: #e9ecef;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

.alert {
    animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
    from {
        transform: translateY(-20px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Style pour la pagination */
.navigation .pagination {
    margin: 20px 0;
    padding: 0;
    list-style: none;
    display: flex;
    gap: 5px;
}

.navigation .pagination li {
    display: inline;
}

.navigation .pagination li a,
.navigation .pagination li span {
    display: inline-block;
    padding: 8px 12px;
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    color: #007bff;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s;
}

.navigation .pagination li.active span {
    background-color: #007bff;
    border-color: #007bff;
    color: white;
}

.navigation .pagination li a:hover {
    background-color: #e9ecef;
    border-color: #dee2e6;
    color: #0056b3;
}

.navigation .pagination li.disabled span {
    color: #6c757d;
    background-color: #f8f9fa;
    border-color: #dee2e6;
    cursor: not-allowed;
}
</style>

{% endblock %}