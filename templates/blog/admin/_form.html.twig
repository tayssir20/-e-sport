<style>
    .admin-form .form-group {
        margin-bottom: 1.5rem;
    }

    .admin-form .form-control,
    .admin-form .form-select {
        color: #e2e8f0;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.2s ease;
        font-size: 0.95rem;
    }

    .admin-form .form-control::placeholder {
        color: #94a3b8;
    }

    .admin-form .form-control:focus,
    .admin-form .form-select:focus {
        background: rgba(30, 41, 59, 0.7);
        border-color: #6366f1;
        box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.15);
    }

    .admin-form label {
        color: #e2e8f0;
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }
    .admin-form .form-error-message,
    .admin-form .invalid-feedback,
    .admin-form ul,
    .admin-form li {
        color: #ffffff !important;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-btn-group {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(148, 163, 184, 0.1);
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
        padding: 0.6rem 1.3rem;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: #fff;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(99, 102, 241, 0.35);
    }

    .btn-secondary {
        background: rgba(148, 163, 184, 0.1);
        color: #e2e8f0;
    }
</style>



{{ form_start(form, {'attr': {'class': 'admin-form', 'novalidate': 'novalidate'}}) }}

<div class="form-grid">

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_widget(form.content, {
            'attr': {
                'class': 'form-control',
                'rows': 5
            }
        }) }}
        {{ form_errors(form.content) }}
    </div>

    <div class="form-group">
        {{ form_label(form.createdAt, 'Published At') }}
        {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.createdAt) }}
    </div>

    <div class="form-group">
        {{ form_label(form.category) }}
        {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.category) }}
    </div>

</div>

<div class="form-btn-group">
    <button class="btn btn-primary">
        <i class="fas fa-save"></i> {{ button_label|default('Save Blog') }}
    </button>

    <a href="{{ path('admin_blog_index') }}" class="btn btn-secondary">
        <i class="fas fa-times"></i> Cancel
    </a>
</div>

{{ form_end(form) }}
