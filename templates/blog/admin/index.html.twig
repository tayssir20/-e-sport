{% extends 'admin/dashboard.html.twig' %}

{% block title %}Blogs - Admin{% endblock %}

{% block admin_content %}
<style>
    .stat-card {
        text-align: center;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
        z-index: -1;
    }

    .stat-card .number {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 0.5rem;
    }

    .stat-card .label {
        color: #94a3b8;
        font-weight: 500;
        font-size: 0.875rem;
    }

    .table {
        color: #e2e8f0;
    }

    .table thead th {
        font-weight: 600;
        border-bottom: 2px solid rgba(148, 163, 184, 0.1);
        color: #cbd5e1;
    }

    .table tbody tr {
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        transition: background 0.2s ease;
    }

    .table tbody tr:hover {
        background: rgba(99, 102, 241, 0.05);
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: var(--radius-sm);
        border: none;
        background: rgba(148, 163, 184, 0.1);
        color: #94a3b8;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .action-btn:hover {
        background: rgba(99, 102, 241, 0.15);
        color: var(--primary);
    }

    .action-btn.view:hover {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
    }

    .action-btn.edit:hover {
        background: rgba(245, 158, 11, 0.15);
        color: var(--warning);
    }

    .action-btn.delete:hover {
        background: rgba(239, 68, 68, 0.15);
        color: var(--danger);
    }

    /* Inline actions group */
    .actions-group {
        display: inline-flex;
        gap: 8px;
        align-items: center;
        justify-content: flex-end;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
    }

    .badge-pending {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .badge-finished {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .badge-in-progress {
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
    }
</style>
 

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="page-title">Blogs Management</h1>
        </div>
        <a href="{{ path('admin_blog_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>New Blog
        </a>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">{{ blogs|length }}</div>
                <div class="label">Total Blogs</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">{{ blogs|filter(b => b.commentCount is defined and b.commentCount > 0)|length }}</div>
                <div class="label">With Comments</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">{{ blogs|filter(b => b.commentCount is defined and b.commentCount == 0)|length }}</div>
                <div class="label">No Comments</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">
                    {{ (blogs|map(b => b.commentCount|default(0))|default([]) | reduce((acc, v) => acc + v, 0) / (blogs|length > 0 ? blogs|length : 1)) | number_format(1, '.', ',') }}
                </div>
                <div class="label">Avg Comments</div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Blogs</h5>
        <div class="d-flex gap-2">
            <button class="btn btn-outline">
                <i class="fas fa-filter me-2"></i>Filter
            </button>
            <a href="{{ path('admin_blog_export_csv') }}" class="btn btn-outline">
                <i class="fas fa-download me-2"></i>Export
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Content</th>
                        <th>CreatedAt</th>
                        <th>Category</th>
                        
                     
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for blog in blogs %}
                    <tr>
                        <td>{{ blog.title }}</td>
                        <td>{{ blog.content|slice(0,50) ~ (blog.content|length>50 ? '...' : '') }}</td>
                        <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ blog.category }}</td>
                       
                        <td class="text-end">
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="{{ path('admin_blog_show', {'id': blog.id}) }}" class="action-btn view" title="View"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('admin_blog_edit', {'id': blog.id}) }}" class="action-btn edit" title="Edit"><i class="fas fa-edit"></i></a>
                                <form method="post" action="{{ path('admin_blog_delete', {'id': blog.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this blog?');" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
                                    <button type="submit" class="action-btn delete" title="Delete"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-newspaper fa-3x text-muted"></i>
                            </div>
                            <h5 class="text-muted mb-3">No blogs found</h5>
                            <p class="text-muted mb-4">Get started by creating your first blog</p>
                            <a href="{{ path('admin_blog_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-2"></i>Create Blog
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
