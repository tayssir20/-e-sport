{% extends 'base.html.twig' %}
{% block title %}Ma Wishlist{% endblock %}

{% block body %}
<section class="section_padding" style="min-height: 80vh;">
    <div class="container">

        <div class="text-center mb-5">
            <h2 style="color: #fff; font-weight: 900; text-transform: uppercase; letter-spacing: 3px;">
                ‚ù§Ô∏è Ma <span style="background: linear-gradient(90deg, #ef4444, #f59e0b); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Wishlist</span>
            </h2>
            <p style="color: #64748b;">{{ items|length }} produit(s) sauvegard√©(s)</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert" style="background: rgba(34,197,94,0.1); border: 1px solid #22c55e; color: #22c55e; padding: 12px 20px; border-radius: 10px; margin-bottom: 20px;">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('info') %}
            <div class="alert" style="background: rgba(239,68,68,0.1); border: 1px solid #ef4444; color: #ef4444; padding: 12px 20px; border-radius: 10px; margin-bottom: 20px;">{{ message }}</div>
        {% endfor %}

        {% if items is empty %}
            <div style="text-align: center; padding: 80px 20px;">
                <p style="font-size: 4rem;">üíî</p>
                <h4 style="color: #475569;">Votre wishlist est vide</h4>
                <a href="{{ path('app_product_index') }}" class="btn_1 mt-3">D√©couvrir les produits</a>
            </div>
        {% else %}
            <div class="row">
                {% for item in items %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div style="
                        background: linear-gradient(145deg, rgba(15,23,42,0.9), rgba(30,41,59,0.7));
                        border: 1px solid rgba(255,255,255,0.05);
                        border-radius: 16px;
                        overflow: hidden;
                        transition: transform 0.3s;
                        box-shadow: 0 10px 30px rgba(0,0,0,0.4);
                    " onmouseover="this.style.transform='translateY(-6px)'"
                       onmouseout="this.style.transform='translateY(0)'">

                        <div style="height: 200px; overflow: hidden; position: relative;">
                            <img src="{{ item.product.image }}" alt="{{ item.product.name }}"
                                 style="width: 100%; height: 100%; object-fit: cover;">
                            <div style="position: absolute; top: 10px; right: 10px; background: rgba(0,0,0,0.6); border-radius: 8px; padding: 4px 8px; color: #64748b; font-size: 0.75rem;">
                                {{ item.addedAt|date('d/m/Y') }}
                            </div>
                        </div>

                        <div style="padding: 20px;">
                            <h5 style="color: #e2e8f0; font-weight: 800; margin-bottom: 6px;">
                                {{ item.product.name }}
                            </h5>
                            <p style="color: #64748b; font-size: 0.85rem; margin-bottom: 16px;">
                                {{ item.product.description|slice(0, 70) }}...
                            </p>

                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 14px;">
                                <span style="background: linear-gradient(90deg, #ef4444, #f59e0b); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-size: 1.3rem; font-weight: 900;">
                                    {{ item.product.price|number_format(2, ',', ' ') }} TND
                                </span>
                                <span style="color: {% if item.product.stock > 0 %}#22c55e{% else %}#ef4444{% endif %}; font-size: 0.8rem; font-weight: 700;">
                                    {% if item.product.stock > 0 %}‚úÖ En stock{% else %}‚ùå Rupture{% endif %}
                                </span>
                            </div>

                            <div style="display: flex; gap: 10px;">
                                <a href="{{ path('app_product_show', {id: item.product.id}) }}"
                                   class="btn_1" style="flex: 1; text-align: center; font-size: 0.85rem;">
                                    Voir
                                </a>
                                <a href="{{ path('app_wishlist_remove', {id: item.id}) }}"
                                   style="background: rgba(239,68,68,0.1); border: 1px solid rgba(239,68,68,0.3); color: #ef4444; padding: 8px 16px; border-radius: 8px; font-size: 0.85rem; text-decoration: none; transition: all 0.2s;"
                                   onmouseover="this.style.background='rgba(239,68,68,0.2)'"
                                   onmouseout="this.style.background='rgba(239,68,68,0.1)'">
                                    üóëÔ∏è
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}

    </div>
</section>
{% endblock %}