{% extends 'admin/dashboard.html.twig' %}

{% block title %}Upload Vidéo{% endblock %}

{% block admin_content %}
<div class="page-header">
    <h1 class="page-title"><i class="fas fa-upload me-2"></i> Upload Vidéo</h1>
    <p class="page-subtitle">Ajouter une vidéo existante</p>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_row(form.videoFile) }}
            <button type="submit" class="btn btn-primary mt-2">Upload</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}