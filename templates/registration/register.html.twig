{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 420px; border-radius: 15px;">
        <h3 class="text-center mb-4 fw-bold">Create Account</h3>
        

        {{ form_start(registrationForm) }}

        {# GLOBAL FORM ERRORS #}
        {{ form_errors(registrationForm) }}

        {# Email #}
        <div class="mb-3">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small mt-1">
                {{ form_errors(registrationForm.email) }}
            </div>
        </div>

        {# Nom #}
        <div class="mb-3">
            {{ form_label(registrationForm.nom) }}
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small mt-1">
                {{ form_errors(registrationForm.nom) }}
            </div>
        </div>

        {# Role #}
        <div class="mb-3">
            {{ form_label(registrationForm.role) }}
            {{ form_widget(registrationForm.role, {'attr': {'class': 'form-select'}}) }}
            <div class="text-danger small mt-1">
                {{ form_errors(registrationForm.role) }}
            </div>
        </div>

        {# Password #}
        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword.first) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small mt-1">
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword.second) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button class="btn btn-primary w-100 mb-3">Register</button>

        <p class="text-center small">
            Already have an account? 
            <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">Login here</a>
        </p>

        {{ form_end(registrationForm) }}
    </div>
</div>

{% endblock %}
