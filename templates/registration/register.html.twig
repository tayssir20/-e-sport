{% block body %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>

@keyframes fadeUp {
    from {opacity:0; transform:translateY(30px);}
    to {opacity:1; transform:translateY(0);}
}

body{
    background: linear-gradient(90deg,#b8325b,#0b4fa3);
}

.main-wrapper{
    height:100vh;
    display:flex;
    justify-content:center;
    align-items:center;
}

.register-box{
    width:900px;
    min-height:520px;
    background:white;
    border-radius:6px;
    display:flex;
    overflow:hidden;
    box-shadow:0 0 30px rgba(0,0,0,.3);
    animation:fadeUp .7s ease;
    transition:.4s;
}

.register-box:hover{
    box-shadow:0 0 50px rgba(99,91,255,.5);
}

.left-img{
    width:50%;
    background:url('https://i.pinimg.com/736x/29/bf/08/29bf083bd37ae14f65bb683caf2e3096.jpg') center/cover no-repeat;
    transition:1s;
}

.register-box:hover .left-img{
    transform:scale(1.05);
}

.right-form{
    width:50%;
    padding:50px;
    animation:fadeUp 1s ease;
}

h2{
    font-weight:600;
    margin-bottom:30px;
}

.form-control,.form-select{
    border:none;
    border-bottom:1px solid #aaa;
    border-radius:0;
    transition:.3s;
}

.form-control:focus,.form-select:focus{
    box-shadow:none;
    border-color:#635bff;
    padding-left:6px;
}

.register-btn{
    background:#635bff;
    color:white;
    width:100%;
    padding:12px;
    border:none;
    border-radius:4px;
    margin-top:25px;
    transition:.4s;
}

.register-btn:hover{
    transform:translateY(-2px);
    box-shadow:0 8px 20px rgba(99,91,255,.4);
}

.login-link{
    text-align:center;
    margin-top:20px;
    color:#635bff;
    display:block;
    text-decoration:none;
    transition:.3s;
}

.login-link:hover{
    letter-spacing:1px;
}

</style>


<div class="main-wrapper">

<div class="register-box">

    <!-- LEFT IMAGE -->
    <div class="left-img"></div>

    <!-- RIGHT FORM -->
    <div class="right-form">

        <h2>Registration Form</h2>

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

      

        <div class="mt-4">
            {{ form_widget(registrationForm.nom, {'attr': {'class':'form-control','placeholder':'Full Name'}}) }}
            {{ form_errors(registrationForm.nom) }}

        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.email, {'attr': {'class':'form-control','placeholder':'Email'}}) }}
            {{ form_errors(registrationForm.email) }}

        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.role, {'attr': {'class':'form-select'}}) }}
                {{ form_errors(registrationForm.role) }}
        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class':'form-control','placeholder':'Password'}}) }}
                {{ form_errors(registrationForm.plainPassword.first) }}
        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class':'form-control','placeholder':'Confirm Password'}}) }}
                {{ form_errors(registrationForm.plainPassword.second) }}
        </div>

        <button class="register-btn">Register</button>

        <a href="{{ path('app_login') }}" class="login-link">
            Already have an account
        </a>

        <div style="margin-top: 30px; border-top: 1px solid #ddd; padding-top: 20px;">
            <p style="text-align: center; font-size: 13px; color: #666; margin-bottom: 15px;">Or sign up with:</p>
            <a href="{{ path('app_google_oauth') }}" style="
                display: flex;
                align-items: center;
                justify-content: center;
                width: 100%;
                padding: 12px;
                background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
                color: white;
                text-decoration: none;
                border-radius: 4px;
                font-size: 14px;
                font-weight: 500;
                transition: all 0.3s ease;
                border: 1px solid #4b5563;
            " 
            onmouseover="this.style.background='linear-gradient(135deg, #2d3748 0%, #4a5568 100%)';this.style.transform='translateY(-2px)';this.style.boxShadow='0 10px 20px rgba(0,0,0,.2)'"
            onmouseout="this.style.background='linear-gradient(135deg, #1f2937 0%, #374151 100%)';this.style.transform='translateY(0)';this.style.boxShadow='none'">
                <svg style="width: 20px; height: 20px; margin-right: 10px;" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                Sign up with Google
            </a>
        </div>

        {{ form_end(registrationForm) }}

    </div>

</div>

</div>

{% endblock %}