{% block body %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>

@keyframes fadeUp {
    from {opacity:0; transform:translateY(30px);}
    to {opacity:1; transform:translateY(0);}
}

body{
    background: linear-gradient(90deg,#b8325b,#0b4fa3);
}

.main-wrapper{
    height:100vh;
    display:flex;
    justify-content:center;
    align-items:center;
}

.register-box{
    width:900px;
    min-height:520px;
    background:white;
    border-radius:6px;
    display:flex;
    overflow:hidden;
    box-shadow:0 0 30px rgba(0,0,0,.3);
    animation:fadeUp .7s ease;
    transition:.4s;
}

.register-box:hover{
    box-shadow:0 0 50px rgba(99,91,255,.5);
}

.left-img{
    width:50%;
    background:url('https://i.pinimg.com/736x/29/bf/08/29bf083bd37ae14f65bb683caf2e3096.jpg') center/cover no-repeat;
    transition:1s;
}

.register-box:hover .left-img{
    transform:scale(1.05);
}

.right-form{
    width:50%;
    padding:50px;
    animation:fadeUp 1s ease;
}

h2{
    font-weight:600;
    margin-bottom:30px;
}

.form-control,.form-select{
    border:none;
    border-bottom:1px solid #aaa;
    border-radius:0;
    transition:.3s;
}

.form-control:focus,.form-select:focus{
    box-shadow:none;
    border-color:#635bff;
    padding-left:6px;
}

.register-btn{
    background:#635bff;
    color:white;
    width:100%;
    padding:12px;
    border:none;
    border-radius:4px;
    margin-top:25px;
    transition:.4s;
}

.register-btn:hover{
    transform:translateY(-2px);
    box-shadow:0 8px 20px rgba(99,91,255,.4);
}

.login-link{
    text-align:center;
    margin-top:20px;
    color:#635bff;
    display:block;
    text-decoration:none;
    transition:.3s;
}

.login-link:hover{
    letter-spacing:1px;
}

</style>


<div class="main-wrapper">

<div class="register-box">

    <!-- LEFT IMAGE -->
    <div class="left-img"></div>

    <!-- RIGHT FORM -->
    <div class="right-form">

        <h2>Registration Form</h2>

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

      

        <div class="mt-4">
            {{ form_widget(registrationForm.nom, {'attr': {'class':'form-control','placeholder':'Full Name'}}) }}
        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.email, {'attr': {'class':'form-control','placeholder':'Email'}}) }}
        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.role, {'attr': {'class':'form-select'}}) }}
        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class':'form-control','placeholder':'Password'}}) }}
        </div>

        <div class="mt-4">
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class':'form-control','placeholder':'Confirm Password'}}) }}
        </div>

        <button class="register-btn">Register</button>

        <a href="{{ path('app_login') }}" class="login-link">
            Already have an account
        </a>

        {{ form_end(registrationForm) }}

    </div>

</div>

</div>

{% endblock %}