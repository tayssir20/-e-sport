{% if equipe_id is defined %}
    {% set chat_url = path('chatbot_equipe', {id: equipe_id}) %}
    {% set chat_title = 'ðŸ¤– Assistant Ã‰quipe' %}
    {% set chat_placeholder = 'Demande des stats, le win rate...' %}
    {% set chat_color = '#6f42c1' %}
{% elseif tournoi_id is defined %}
    {% set chat_url = path('chatbot_tournoi', {tournoiId: tournoi_id}) %}
    {% set chat_title = 'ðŸ¤– Assistant Tournoi' %}
    {% set chat_placeholder = 'Classement, pronostics, stats...' %}
