<style>
    :root {
        --g-black: #000000;
        --g-blue: #054397;
        --g-purple: #a52bf9;
        --g-red: #ff0000;
        --g-cream: #FDF5E7;
        --card-white: #ffffff;
    }

    .gaming-shop-wrapper {
        background: radial-gradient(circle at 10% 10%, rgba(5, 67, 151, 0.2), var(--g-black) 45%),
                    radial-gradient(circle at 90% 90%, rgba(165, 43, 249, 0.2), var(--g-blue) 45%),
                    radial-gradient(circle at 90% 90%, rgba(165, 43, 249, 0.2), var(--g-red) 45%);
        background-color: var(--g-black);
        padding: 80px 0;
        color: var(--g-cream);
        font-family: 'Open Sans', sans-serif;
    }

    .gaming-sidebar {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 25px;
    }

    .category-item {
        color: var(--g-cream) !important;
        padding: 12px 15px;
        border-radius: 10px;
        display: flex;
        justify-content: space-between;
        text-decoration: none;
        transition: 0.3s;
        margin-bottom: 5px;
    }

    .category-item:hover {
        background: var(--g-blue);
        box-shadow: 0 0 15px var(--g-blue);
    }

    .gaming-card-white {
        background: var(--card-white);
        border-radius: 20px;
        overflow: hidden;
        border: none;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .gaming-card-white:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 50px rgba(165, 43, 249, 0.4);
    }

    .gaming-card-white img {
        width: 100%;
        border: none !important;
        border-radius: 16px;
        transition: transform 0.4s ease;
    }

    .gaming-card-white:hover img {
        transform: scale(1.05);
    }

    .gaming-card-white h4 {
        color: #111 !important;
        font-weight: 800;
        margin-top: 15px;
    }

    .gaming-card-white p {
        color: #555 !important;
        font-size: 0.85rem;
    }

    .price-text {
        color: var(--g-black);
        font-weight: 800;
        font-size: 1.4rem;
    }

    .btn-buy {
        background: linear-gradient(45deg, var(--g-blue), var(--g-purple));
        border: none;
        color: white;
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: 600;
        transition: 0.3s;
        cursor: pointer;
    }

    .btn-buy:hover {
        filter: brightness(1.2);
        box-shadow: 0 0 15px var(--g-purple);
        color: white;
        transform: scale(1.05);
    }

    .btn-buy:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-buy.loading {
        background: linear-gradient(45deg, #666, #999);
    }

    .btn-buy.success {
        background: linear-gradient(45deg, #28a745, #20c997);
    }

    /* Cart Badge in Navbar */
    .gaming-nav-cart {
        position: relative;
        font-size: 22px;
        color: #444;
        text-decoration: none;
        display: flex;
        align-items: center;
    }

    .cart-badge {
        position: absolute;
        top: -8px;
        right: -10px;
        background: #ff0000;
        color: #fff;
        font-size: 10px;
        font-weight: 800;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid #fff;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    /* Success Notification */
    .success-notification {
        position: fixed;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        padding: 15px 25px;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(40, 167, 69, 0.4);
        z-index: 10000;
        animation: slideIn 0.3s ease;
    }

    @keyframes slideIn {
        from {
            transform: translateX(400px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @keyframes slideOut {
        from {
            transform: translateX(0);
            opacity: 1;
        }
        to {
            transform: translateX(400px);
            opacity: 0;
        }
    }

    .out-of-stock {
        background: #6c757d !important;
        cursor: not-allowed !important;
    }
</style>

<div class="container-fluid gaming-shop-wrapper">
    <div class="container">
        <div class="row mb-5 align-items-center">
            <div class="col-md-6">
                <h6 class="text-uppercase" style="color: var(--g-purple); letter-spacing: 4px;">Hardware Depot</h6>
                <h2 class="display-5 fw-bold text-white">GAMING GEAR</h2>
            </div>
            <div class="col-md-6 text-md-end">
               <div class="input-group w-75 ms-auto">
                    <form method="get" action="{{ path('app_product_index2') }}" class="d-flex w-100">
                        <input type="text" name="search" value="{{ searchTerm|default('') }}" class="form-control bg-dark text-white border-0" placeholder="Search gear...">
                        <button class="btn btn-primary border-0" style="background: var(--g-cream);">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Sidebar -->
            <div class="col-lg-3">
                <div class="gaming-sidebar">
                    <h4 class="mb-4 text-white">CATEGORIES</h4>
                    <nav>
                        {% for category in categories %}
                            <a href="{{ path('app_product_by_category_index2', {id: category.id}) }}" class="category-item">
                                <span>{{ category.name }}</span>
                                <span class="badge bg-dark">{{ category.products|length }}</span>
                            </a>
                        {% endfor %}
                    </nav>
                </div>
            </div>

            <!-- Products -->
            <div class="col-lg-9">
                <div class="row g-4">
                    {% for product in products %}
                        <div class="col-md-6 col-xl-4">
                            <div class="gaming-card-white h-100 p-3">
                                <!-- Product Link (Image & Info) -->
                                <a href="{{ path('app_product_show', {id: product.id}) }}" class="text-decoration-none">
                                    <img src="{{ product.image }}" class="img-fluid rounded-4" alt="{{ product.name }}">
                                    <div class="text-center">
                                        <h4>{{ product.name }}</h4>
                                        <p>{{ product.description|length > 80 ? product.description|slice(0, 80) ~ '...' : product.description }}</p>
                                        <p><strong>Category:</strong> {{ product.category.name }}</p>
                                    </div>
                                </a>

                                <!-- Price and Add to Cart (NOT in link) -->
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="price-text">{{ product.price }} TND</span>
                                    
                                    <div class="d-flex align-items-center gap-2">
                                        {% if app.user %}
                                            <a href="{{ path('app_wishlist_toggle', {id: product.id}) }}" style="text-decoration:none; font-size:18px;">
                                                {% if product.id in wishlistIds %}‚ù§Ô∏è{% else %}ü§ç{% endif %}
                                            </a>
                                        {% endif %}

                                        {% if app.user %}
                                            {% if product.stock > 0 %}
                                                <button class="btn-buy add-to-cart-btn" 
                                                        data-product-id="{{ product.id }}"
                                                        data-product-name="{{ product.name }}"
                                                        data-product-price="{{ product.price }}">
                                                    <i class="fas fa-shopping-cart"></i> ADD
                                                </button>
                                            {% else %}
                                                <span class="btn-buy out-of-stock">
                                                    <i class="fas fa-times-circle"></i> OUT
                                                </span>
                                            {% endif %}
                                        {% else %}
                                            <a href="{{ path('app_login') }}" class="btn-buy text-decoration-none">
                                                <i class="fas fa-sign-in-alt"></i> LOGIN
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-white">No products available.</p>
                    {% endfor %}
                    <div class="mt-4">
                        {{ knp_pagination_render(products) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
