}

.thumb-link img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.thumb-link.active { 
    border-color: #054397; 
    transform: translateY(-3px);
}

.pdp-category { 
    color: #a52bf9; 
    font-weight: 600; 
    letter-spacing: 1px; 
    font-size: .75rem; 
    margin-bottom: .2rem; 
}

.pdp-title { 
    font-weight: 800; 
