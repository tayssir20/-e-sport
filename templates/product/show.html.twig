    <div class="container">
        <nav class="mb-4">
            <ol class="breadcrumb" style="background:transparent;">
                <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}" style="color:#054397;">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}" style="color:#054397;">Products</a></li>
                <li class="breadcrumb-item active text-dark">{{ product.name }}</li>
            </ol>
        </nav>

        <section class="pdp-section">
            <div class="row g-4 align-items-center">
                <!-- Images -->
                <div class="col-lg-6 text-center">
                    <div class="pdp-main-image">
                        <img src="{{ asset(product.image) }}" id="pdp-hero" alt="{{ product.name }}">
                    </div>

                    {% if product.images is defined and product.images|length > 0 %}
                        <div class="d-flex gap-2 justify-content-center mt-3">
                            {% for img in product.images %}
                                <div class="thumb-link {% if loop.first %}active{% endif %}" onclick="updatePDPImage(this)">
                                    <img src="{{ asset(img) }}" class="img-fluid">
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <!-- Product Info -->
                <div class="col-lg-6">
                    <p class="pdp-category mb-1">{{ product.category.name }}</p>
                    <h2 class="pdp-title mb-2">{{ product.name }}</h2>
                    <h3 class="pdp-price mb-3">{{ product.price }} TND</h3>
                    <p class="text-muted mb-4" style="font-size:0.9rem;line-height:1.4;">{{ product.description }}</p>

                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="pdp-qty-selector">
                            <button class="btn btn-link text-dark p-0" onclick="changePdpQty(-1)">
                                <i class="fas fa-minus"></i>
                            </button>
                            <span class="px-3 fw-bold" id="pdp-count">1</span>
                            <button class="btn btn-link text-dark p-0" onclick="changePdpQty(1)">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        
                        {% if product.stock > 0 %}
                            <span class="text-danger fw-bold small">
                                <i class="fas fa-bolt me-1"></i> ONLY {{ product.stock }} LEFT IN STOCK
                            </span>
                        {% else %}
                            <span class="text-danger fw-bold small">
                                <i class="fas fa-times-circle me-1"></i> OUT OF STOCK
                            </span>
                        {% endif %}
                    </div>

                    <div class="d-flex gap-2 mb-4">
                        {% if app.user %}
                            {% if product.stock > 0 %}
                                <button class="pdp-btn-primary flex-grow-1" 
                                        id="add-to-cart-btn"
                                        data-product-id="{{ product.id }}"
                                        data-product-name="{{ product.name }}"
                                        data-max-stock="{{ product.stock }}">
                                    <i class="fas fa-shopping-cart me-2"></i>ADD TO CART
                                </button>
                            {% else %}
                                <button class="pdp-btn-primary flex-grow-1" disabled style="background:#6c757d;">
                                    <i class="fas fa-times-circle me-2"></i>OUT OF STOCK
                                </button>
                            {% endif %}
                        {% else %}
                            <a href="{{ path('app_login') }}" class="pdp-btn-primary flex-grow-1 text-center text-decoration-none">
                                <i class="fas fa-sign-in-alt me-2"></i>LOGIN TO PURCHASE
                            </a>
                        {% endif %}
                       {% if app.user %}
    <a href="{{ path('app_wishlist_toggle', {id: product.id}) }}"
       style="
           display: inline-flex; align-items: center; justify-content: center;
           width: 52px; height: 52px;
           border-radius: 12px;
           border: 2px solid {% if isInWishlist %}#ef4444{% else %}#dee2e6{% endif %};
           background: {% if isInWishlist %}rgba(239,68,68,0.08){% else %}transparent{% endif %};
           font-size: 20px;
           text-decoration: none;
           transition: all 0.2s;
       "
       title="{% if isInWishlist %}Retirer de la wishlist{% else %}Ajouter √† la wishlist{% endif %}"
       onmouseover="this.style.borderColor='#ef4444'; this.style.background='rgba(239,68,68,0.08)';"
       onmouseout="this.style.borderColor='{% if isInWishlist %}#ef4444{% else %}#dee2e6{% endif %}'; this.style.background='{% if isInWishlist %}rgba(239,68,68,0.08){% else %}transparent{% endif %}';">
        {% if isInWishlist %}‚ù§Ô∏è{% else %}ü§ç{% endif %}
    </a>
{% endif %}
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <div class="row text-center text-md-start g-3">
                            <div class="col-md-4">
                                <i class="fas fa-truck mb-1" style="color:#054397;"></i>
                                <p class="small mb-0 fw-bold">Free Shipping</p>
                            </div>
                            <div class="col-md-4">
                                <i class="fas fa-undo mb-1" style="color:#a52bf9;"></i>
                                <p class="small mb-0 fw-bold">30-Day Returns</p>
                            </div>
                            <div class="col-md-4">
                                <i class="fas fa-shield-alt mb-1" style="color:#ff0000;"></i>
                                <p class="small mb-0 fw-bold">2-Year Warranty</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

{# CSS Styles #}
