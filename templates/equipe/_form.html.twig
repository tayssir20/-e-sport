{# templates/equipe/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}, 'multipart': true}) }}
{% if return_to_tournoi is defined and return_to_tournoi %}
    <input type="hidden" name="return_to_tournoi" value="{{ return_to_tournoi }}">
{% endif %}

<div class="mb-4">
    <label class="form-label" style="color: #cbd5e1; font-weight: 600; margin-bottom: 8px; display: block;">Team Name</label>
    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter team name', 'style': 'background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.15); color: #e5e7eb; padding: 12px; border-radius: 12px;'}}) }}
    {{ form_errors(form.nom) }}
</div>

<div class="mb-4">
    <label class="form-label" style="color: #cbd5e1; font-weight: 600; margin-bottom: 8px; display: block;">Max Members</label>
    {{ form_widget(form.maxMembers, {'attr': {'class': 'form-control', 'placeholder': 'Enter max members', 'style': 'background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.15); color: #e5e7eb; padding: 12px; border-radius: 12px;'}}) }}
    {{ form_errors(form.maxMembers) }}
</div>

<div class="mb-4">
    <label class="form-label" style="color: #cbd5e1; font-weight: 600; margin-bottom: 8px; display: block;">Join Tournaments</label>
    {{ form_widget(form.Tournois, {'attr': {'class': 'form-select', 'multiple': 'multiple', 'size': 4, 'style': 'background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.08); color: #000; padding: 12px; border-radius: 12px; min-height:48px; appearance:none; -webkit-appearance:none;'}}) }}
    <small class="form-text text-muted" style="color: #94a3b8; margin-top: 5px; display: block;">Hold Ctrl/Cmd to select multiple tournaments</small>
    {{ form_errors(form.Tournois) }}
</div>
<br>
<div class="mb-4" >
    <label class="form-label" style="color: #cbd5e1; font-weight: 600; margin-bottom: 8px; display: block;">Logo (PNG/JPEG)</label>
    <div style="display:flex;gap:12px;align-items:center;">
        {{ form_widget(form.logo, {'attr': {'class': 'form-control-file', 'accept': 'image/png,image/jpeg', 'style': 'background: transparent; color: #e5e7eb; padding: 8px 12px; border-radius:8px; border:1px dashed rgba(255,255,255,0.06);'}}) }}
    </div>
    {{ form_errors(form.logo) }}
</div>

<div class="form-actions" style="margin-top: 30px; text-align: center;">
    <button type="submit" class="btn btn-submit" style="background: linear-gradient(135deg, #ec4899, #f472b6, #a855f7); color: white; border: none; padding: 12px 30px; border-radius: 12px; font-weight: 700; box-shadow: 0 5px 15px rgba(236, 72, 153, 0.4); cursor: pointer; transition: transform 0.2s;">
        <i class="fas fa-save"></i> {{ button_label|default('Save Team') }}
    </button>
</div>



{{ form_end(form) }}
