<form method="post" action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" onsubmit="return confirm('Are you sure you want to delete this team? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
    <p style="color: #cbd5e1; margin-bottom: 20px;">Once you delete a team, there is no going back. Please be certain.</p>
    <button type="submit" class="btn btn-danger" style="background: #ef4444; color: white; border: none; padding: 12px 24px; border-radius: 12px; font-weight: 600; cursor: pointer; transition: background 0.2s;">
        <i class="fas fa-trash-alt"></i> Delete Team Permanently
    </button>
</form>
