{% extends 'base.html.twig' %}
{% block title %}Membres · {{ equipe.nom }}{% endblock %}

{% block body %}
<style>
/* ── Page Layout ── */
.invite-page {
    min-height: 100vh;
    padding: 60px 20px 80px;
    background: radial-gradient(circle at 30% 0%, rgba(99,102,241,0.15), transparent 50%),
                radial-gradient(circle at 80% 100%, rgba(56,189,248,0.1), transparent 50%);
    font-family: 'Segoe UI', sans-serif;
    color: #e5e7eb;
}

.invite-container {
    max-width: 1100px;
    margin: 0 auto;
}

/* ── Header Section ── */
.invite-header {
    text-align: center;
    margin-bottom: 50px;
}

.invite-header .team-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: rgba(30,41,59,0.7);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(148,163,184,0.15);
    padding: 8px 20px;
    border-radius: 999px;
    font-size: 0.9rem;
    color: #94a3b8;
    margin-bottom: 20px;
}

.invite-header .team-badge img {
    width: 28px;
    height: 28px;
    border-radius: 6px;
    object-fit: cover;
}

.invite-header .team-badge .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #22c55e;
    box-shadow: 0 0 8px rgba(34,197,94,0.5);
}

.invite-title {
    font-size: clamp(2.2rem, 5vw, 3.2rem);
    font-weight: 900;
    margin-bottom: 10px;
    background: linear-gradient(135deg, #a855f7, #38bdf8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.invite-subtitle {
    color: #94a3b8;
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto;
}

/* ── Stats Bar ── */
.stats-bar {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-bottom: 40px;
    flex-wrap: wrap;
}

.stat-item {
    text-align: center;
}

.stat-item .stat-value {
    font-size: 1.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, #38bdf8, #6366f1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.stat-item .stat-label {
    font-size: 0.8rem;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 2px;
}

/* ── Search Bar ── */
.search-section {
    margin-bottom: 30px;
    display: flex;
    justify-content: center;
}

.search-box {
    background: rgba(30,41,59,0.65);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(148,163,184,0.15);
    border-radius: 16px;
    padding: 14px 24px;
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
    max-width: 500px;
    transition: border-color 0.3s;
}

.search-box:focus-within {
    border-color: #6366f1;
    box-shadow: 0 0 20px rgba(99,102,241,0.15);
}

.search-box svg {
    width: 20px;
    height: 20px;
    color: #64748b;
    flex-shrink: 0;
}

.search-box input {
    background: none;
    border: none;
    outline: none;
    color: #e5e7eb;
    font-size: 1rem;
    width: 100%;
}

.search-box input::placeholder {
    color: #64748b;
}

/* ── Users Grid ── */
.users-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 16px;
}

/* ── User Card ── */
.user-card {
    background: rgba(30,41,59,0.6);
    backdrop-filter: blur(16px);
    border: 1px solid rgba(148,163,184,0.12);
    border-radius: 18px;
    padding: 20px 24px;
    display: flex;
    align-items: center;
    gap: 16px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.user-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 3px;
    background: linear-gradient(90deg, #6366f1, #38bdf8);
    opacity: 0;
    transition: opacity 0.3s;
}

.user-card:hover {
    transform: translateY(-4px);
    border-color: rgba(99,102,241,0.35);
    box-shadow: 0 12px 40px rgba(0,0,0,0.3), 0 0 30px rgba(99,102,241,0.1);
}

.user-card:hover::before {
    opacity: 1;
}

.user-card.is-member {
    border-color: rgba(34,197,94,0.25);
}

.user-card.is-member::before {
    background: linear-gradient(90deg, #22c55e, #16a34a);
    opacity: 1;
}

/* ── Avatar ── */
.user-avatar {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: 1.1rem;
    color: white;
    flex-shrink: 0;
    text-transform: uppercase;
}

.avatar-purple { background: linear-gradient(135deg, #7c3aed, #a855f7); }
.avatar-blue   { background: linear-gradient(135deg, #2563eb, #38bdf8); }
.avatar-pink   { background: linear-gradient(135deg, #db2777, #ec4899); }
.avatar-teal   { background: linear-gradient(135deg, #0d9488, #14b8a6); }
.avatar-orange { background: linear-gradient(135deg, #ea580c, #f97316); }

/* ── User Info ── */
.user-info {
    flex: 1;
    min-width: 0;
}

.user-name {
    font-weight: 700;
    font-size: 1.05rem;
    color: #f1f5f9;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.user-email {
    font-size: 0.82rem;
    color: #64748b;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 2px;
}

/* ── Buttons ── */
.btn-invite {
    border: none;
    padding: 10px 20px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    flex-shrink: 0;
}

.btn-add-player {
    background: linear-gradient(135deg, #6366f1, #3b82f6);
    color: white;
    box-shadow: 0 4px 15px rgba(99,102,241,0.3);
}

.btn-add-player:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 25px rgba(99,102,241,0.45);
}

.btn-already-member {
    background: rgba(34,197,94,0.15);
    color: #22c55e;
    cursor: default;
    border: 1px solid rgba(34,197,94,0.25);
}

.member-actions {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
}

.btn-remove {
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: rgba(239,68,68,0.12);
    color: #ef4444;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(239,68,68,0.2);
}

.btn-remove:hover {
    background: rgba(239,68,68,0.25);
    box-shadow: 0 4px 15px rgba(239,68,68,0.3);
    transform: scale(1.1);
}

.btn-remove:disabled {
    background: rgba(100,116,139,0.1);
    color: #475569;
    border-color: rgba(100,116,139,0.15);
    cursor: not-allowed;
    opacity: 0.5;
}

.btn-remove:disabled:hover {
    transform: none;
    box-shadow: none;
    background: rgba(100,116,139,0.1);
}

/* ── Empty State ── */
.empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #64748b;
    grid-column: 1 / -1;
}

.empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 16px;
    opacity: 0.4;
}

/* ── Back Link ── */
.back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #94a3b8;
    text-decoration: none;
    font-weight: 600;
    margin-top: 40px;
    padding: 10px 20px;
    border-radius: 12px;
    transition: all 0.3s;
    background: rgba(30,41,59,0.5);
    border: 1px solid rgba(148,163,184,0.1);
}

.back-link:hover {
    color: #38bdf8;
    border-color: rgba(56,189,248,0.3);
    transform: translateX(-4px);
}

/* ── Responsive ── */
@media (max-width: 640px) {
    .users-grid {
        grid-template-columns: 1fr;
    }
    .stats-bar {
        gap: 24px;
    }
}

/* ── Animations ── */
@keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to   { opacity: 1; transform: translateY(0); }
}

.user-card {
    animation: fadeUp 0.4s ease both;
}

.users-grid .user-card:nth-child(1)  { animation-delay: 0.02s; }
.users-grid .user-card:nth-child(2)  { animation-delay: 0.06s; }
.users-grid .user-card:nth-child(3)  { animation-delay: 0.10s; }
.users-grid .user-card:nth-child(4)  { animation-delay: 0.14s; }
.users-grid .user-card:nth-child(5)  { animation-delay: 0.18s; }
.users-grid .user-card:nth-child(6)  { animation-delay: 0.22s; }
.users-grid .user-card:nth-child(7)  { animation-delay: 0.26s; }
.users-grid .user-card:nth-child(8)  { animation-delay: 0.30s; }
.users-grid .user-card:nth-child(9)  { animation-delay: 0.34s; }
.users-grid .user-card:nth-child(10) { animation-delay: 0.38s; }
</style>

<div class="invite-page">
    <div class="invite-container">

        {# ── Header ── #}
        <div class="invite-header">
            <div class="team-badge">
                {% if equipe.logo %}
                    <img src="{{ asset('uploads/teams/' ~ equipe.logo) }}" alt="">
                {% endif %}
                <span class="dot"></span>
                <span>{{ equipe.nom }}</span>
            </div>
            <h1 class="invite-title">Membres</h1>
            <p class="invite-subtitle">Gérez les membres de {{ equipe.nom }}.</p>
        </div>

        {# ── Stats ── #}
        <div class="stats-bar">
            <div class="stat-item">
                <div class="stat-value">{{ equipe.members|length }}</div>
                <div class="stat-label">Members</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">{{ equipe.maxMembers }}</div>
                <div class="stat-label">Max Slots</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">{{ users|length }}</div>
                <div class="stat-label">Available</div>
            </div>
        </div>

        {# ── Pending Join Requests ── #}
        {% if isOwner and pendingRequests is defined and pendingRequests|length > 0 %}
        <div style="margin-bottom:40px;">
            <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:20px;">
                <h2 style="font-size:1.3rem;font-weight:800;display:flex;align-items:center;gap:10px;margin:0;">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#a855f7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="8.5" cy="7" r="4"/><line x1="20" y1="8" x2="20" y2="14"/><line x1="23" y1="11" x2="17" y2="11"/>
                    </svg>
                    <span style="background:linear-gradient(135deg,#a855f7,#38bdf8);-webkit-background-clip:text;-webkit-text-fill-color:transparent;">Demandes en attente</span>
                </h2>
                <span style="background:rgba(168,85,247,0.15);color:#a855f7;font-size:0.8rem;font-weight:700;padding:5px 14px;border-radius:999px;border:1px solid rgba(168,85,247,0.25);">{{ pendingRequests|length }} en attente</span>
            </div>

            <div class="users-grid">
                {% set avatar_colors = ['avatar-purple','avatar-blue','avatar-pink','avatar-teal','avatar-orange'] %}
                {% for req in pendingRequests %}
                <div class="user-card" style="border-color:rgba(168,85,247,0.2);">
                    <div style="position:absolute;top:0;left:0;right:0;height:3px;background:linear-gradient(90deg,#a855f7,#38bdf8);opacity:1;"></div>
                    <div class="user-avatar {{ avatar_colors[loop.index0 % 5] }}">
                        {{ req.user.nom|first|upper }}
                    </div>
                    <div class="user-info">
                        <div class="user-name">{{ req.user.nom ?: req.user.userIdentifier }}</div>
                        <div class="user-email">{{ req.user.email }} · {{ req.createdAt|date('d/m/Y H:i') }}</div>
                    </div>
                    <div style="display:flex;gap:8px;flex-shrink:0;">
                        <form method="post" action="{{ path('app_equipe_handle_join_request', {id: equipe.id, requestId: req.id, action: 'accept'}) }}">
                            <button type="submit" class="btn-invite btn-add-player">
                                ✓ Accepter
                            </button>
                        </form>
                        <form method="post" action="{{ path('app_equipe_handle_join_request', {id: equipe.id, requestId: req.id, action: 'reject'}) }}">
                            <button type="submit" class="btn-remove" style="width:auto;padding:10px 16px;border-radius:12px;font-size:0.85rem;font-weight:700;">
                                ✕ Refuser
                            </button>
                        </form>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {# ── Search ── #}
        <div class="search-section">
            <div class="search-box">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                <input type="text" id="searchInput" placeholder="Search players by name or email…" autocomplete="off">
            </div>
        </div>

        {# ── Users Grid ── #}
        <div class="users-grid" id="usersGrid">
            {% set avatar_colors = ['avatar-purple','avatar-blue','avatar-pink','avatar-teal','avatar-orange'] %}

            {% for user in users %}
                {% set isMember = user.id in teamUsers %}
                <div class="user-card {{ isMember ? 'is-member' : '' }}" data-name="{{ user.nom|lower }}" data-email="{{ user.email|lower }}">

                    <div class="user-avatar {{ avatar_colors[loop.index0 % 5] }}">
                        {{ user.nom|first|upper }}
                    </div>

                    <div class="user-info">
                        <div class="user-name">{{ user.nom }}</div>
                        <div class="user-email">{{ user.email }}</div>
                    </div>

                    {% if isMember %}
                        <div class="member-actions">
                            <span class="btn-invite btn-already-member">✔ Member</span>
                            {% if isOwner %}
                                {% if user.id == equipe.owner.id %}
                                    <button class="btn-remove" disabled title="Owner cannot be removed">✕</button>
                                {% else %}
                                    <form method="post" action="{{ path('app_equipe_remove_member', { id: equipe.id }) }}">
                                        <input type="hidden" name="user_id" value="{{ user.id }}">
                                        <button type="submit" class="btn-remove" title="Remove from team">✕</button>
                                    </form>
                                {% endif %}
                            {% endif %}
                        </div>
                    {% else %}
                        <form method="post" action="{{ path('app_equipe_membres', { id: equipe.id }) }}">
                            <input type="hidden" name="user_id" value="{{ user.id }}">
                            <button type="submit" class="btn-invite btn-add-player">+ Ajouter</button>
                        </form>
                    {% endif %}
                </div>
            {% else %}
                <div class="empty-state">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>
                    </svg>
                    <p>No players found.</p>
                </div>
            {% endfor %}
        </div>

        {# ── Back Link ── #}
        <div style="text-align:center;">
            <a href="{{ path('app_equipe_dashboard', {id: equipe.id}) }}" class="back-link">
                ← Back to Dashboard
            </a>
        </div>

    </div>
</div>

{# ── Live Search Script ── #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const input = document.getElementById('searchInput');
    const grid = document.getElementById('usersGrid');
    if (!input || !grid) return;

    input.addEventListener('input', function() {
        const q = this.value.toLowerCase().trim();
        const cards = grid.querySelectorAll('.user-card');

        cards.forEach(function(card) {
            const name  = card.getAttribute('data-name')  || '';
            const email = card.getAttribute('data-email') || '';
            card.style.display = (name.includes(q) || email.includes(q)) ? '' : 'none';
        });
    });
});
</script>
{% endblock %}
