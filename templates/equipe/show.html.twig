
{% block title %}{{ equipe.nom }}{% endblock %}

{% block body %}
<style>
    :root{--bg:#0f172a;--card1:#111827;--card2:#1f2933;--text:#e5e7eb;--primary:#2563eb;--accent:#22c55e}
    body{background:var(--bg);color:var(--text);font-family:'Segoe UI',sans-serif}
    .container{max-width:1200px;margin:auto;padding:40px 20px}
    .page-title{text-align:center;font-size:2.5rem;margin-bottom:40px}
    .equipe-card{background:linear-gradient(145deg,var(--card1),var(--card2));border-radius:16px;padding:40px;box-shadow:0 10px 30px rgba(0,0,0,.4);margin-bottom:30px;border:1px solid #374151}
    .equipe-info{margin-bottom:30px}
    .info-row{display:flex;align-items:center;padding:15px 0;border-bottom:1px solid #374151}
    .info-row:last-child{border-bottom:none}
    .info-label{font-weight:600;color:var(--primary);min-width:150px;font-size:1rem}
    .info-value{color:#d1d5db;flex:1}
    .items-list{display:flex;flex-wrap:wrap;gap:10px}
    .badge{display:inline-block;padding:8px 12px;border-radius:20px;font-size:0.85rem;font-weight:600}
    .badge-tournament{background:linear-gradient(135deg,var(--primary),#1d4ed8);color:white}
    .badge-member{background:#374151;color:var(--text)}
    .empty-msg{color:#9ca3af;font-style:italic}
    .actions{display:flex;gap:12px;justify-content:center;flex-wrap:wrap}
    .btn{padding:12px 24px;border-radius:10px;font-weight:600;transition:all .3s;border:none;cursor:pointer;text-decoration:none;display:inline-flex;align-items:center;gap:8px}
    .btn-back{background:#374151;color:var(--text)}.btn-back:hover{background:#4b5563}
    .btn-edit{background:#3b82f6;color:#fff}.btn-edit:hover{background:var(--primary)}
    .danger-zone{margin-top:30px;padding-top:30px;border-top:2px solid #ef4444}
    .danger-zone h3{color:#ef4444;margin-top:0}
</style>

<div class="container">
    <h1 class="page-title">üèÜ {{ equipe.nom }}</h1>

    <div class="equipe-card">
        <div class="equipe-info">
            <div class="info-row">
                <span class="info-label">Team ID</span>
                <span class="info-value">#{{ equipe.id }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Team Name</span>
                <span class="info-value">{{ equipe.nom }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Owner</span>
                <span class="info-value">{{ equipe.owner.nom }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Tournaments</span>
                <span class="info-value">
                    {% if equipe.tournois|length > 0 %}
                        <div class="items-list">
                        {% for tournament in equipe.tournois %}
                            <span class="badge badge-tournament">{{ tournament.nom }}</span>
                        {% endfor %}
                        </div>
                    {% else %}
                        <span class="empty-msg">No tournaments yet</span>
                    {% endif %}
                </span>
            </div>
            <div class="info-row">
                <span class="info-label">Members</span>
                <span class="info-value">
                    {% if equipe.members|length > 0 %}
                        <div class="items-list">
                        {% for member in equipe.members %}
                            <span class="badge badge-member">{{ member.nom }}</span>
                        {% endfor %}
                        </div>
                    {% else %}
                        <span class="empty-msg">No members yet</span>
                    {% endif %}
                </span>
            </div>
        </div>

        <div class="actions">
            <a href="{{ path('app_equipe_index') }}" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Back to Teams
            </a>
            <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-edit">
                <i class="fas fa-edit"></i> Edit Team
            </a>
        </div>
    </div>

    <div class="equipe-card danger-zone">
        <h3>‚ö†Ô∏è Danger Zone</h3>
        {{ include('equipe/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
