{% extends 'base.html.twig' %}

{% block title %}Create Team{% endblock %}

{% block body %}
<style>
    /* Page Background */
    .form-page-container {
        min-height: 100vh;
        padding: 60px 20px;
        background: radial-gradient(circle at 50% 0%, rgba(139, 92, 246, 0.15), transparent 50%),
                    radial-gradient(circle at 100% 100%, rgba(236, 72, 153, 0.1), transparent 50%);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .form-title {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 900;
        margin-bottom: 10px;
        background: linear-gradient(to right, #ffffff, #cbd5e1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .form-subtitle {
        color: #94a3b8;
        font-size: 1.1rem;
    }

    /* Form Card */
    .form-card {
        background: rgba(30, 41, 59, 0.7);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 40px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }
</style>

<div class="form-page-container">
    <div class="form-header">
        <h1 class="form-title">Assemble Your Squad</h1>
        <p class="form-subtitle">Create a new team and define your legacy.</p>
    </div>

    <div class="form-card">
        {{ include('equipe/_form.html.twig', { return_to_tournoi: return_to_tournoi|default(null) }) }}
    </div>
</div>
{% endblock %}
