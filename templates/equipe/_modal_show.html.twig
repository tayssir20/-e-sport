<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(4px);
        animation: fadeIn 0.3s ease-in;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .modal-content {
        background: linear-gradient(145deg, #111827, #1f2933);
        border: 1px solid #374151;
        margin: 10% auto;
        padding: 30px;
        border-radius: 16px;
        width: 92%;
        max-width: 520px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
        position: relative;
        animation: slideDown 0.3s ease-out;
    }

    @keyframes slideDown {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    #modalTeamName {
        font-size: 1.75rem;
        color: #e5e7eb;
        margin: 0;
        font-weight: 700;
    }

    .close {
        color: #9ca3af;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
        transition: color 0.3s;
    }

    .close:hover {
        color: #ef4444;
    }

    .modal-info {
        background: rgba(31, 41, 51, 0.5);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        border-left: 4px solid #2563eb;
    }

    .modal-info p {
        color: #d1d5db;
        margin: 0;
        font-size: 0.95rem;
    }

    .modal-info strong {
        color: #2563eb;
        font-weight: 600;
    }

    .modal-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
    }

    #modalJoinBtn {
        display: inline-block;
        background: linear-gradient(135deg, #22c55e, #16a34a);
        color: white;
        text-decoration: none;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

    #modalJoinBtn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(34, 197, 94, 0.3);
    }
</style>

<div id="teamModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTeamName">Loading...</h2>
            <span class="close" onclick="closeModal()">&times;</span>
        </div>

        <div class="modal-info">
            <p><strong>Team ID:</strong> <span id="modalTeamId"></span></p>
            <p><strong>Owner:</strong> <span id="modalOwner"></span></p>
            <p><strong>Members:</strong> <span id="modalMembers">0</span> player(s)</p>
            <p><strong>Tournaments:</strong> <span id="modalTournament"></span></p>
        </div>

        <div class="modal-actions">
            <a id="modalJoinBtn" class="btn btn-join">Join Team</a>
        </div>
    </div>
</div>
