{# templates/tournoi/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Tournois - e-Sports{% endblock %}

{% block body %}
<section class="tournaments-list">
    <div class="container">
        <div class="section-header">
            <h1>Tous les Tournois</h1>
            <p>Rejoignez les meilleurs compÃ©titeurs</p>
        </div>

        <div class="filters">
            <input type="text" id="search-input" placeholder="Rechercher un tournoi..." class="search-input">
            <div class="status-buttons" style="display:flex;gap:10px;align-items:center;">
                <button type="button" class="status-filter-btn active" data-status="">Tous</button>
                <button type="button" class="status-filter-btn" data-status="en_attente">En attente</button>
                <button type="button" class="status-filter-btn" data-status="en_cours">En cours</button>
                <button type="button" class="status-filter-btn" data-status="termine">TerminÃ©</button>
            </div>
        </div>

        <div class="tournaments-list-container">
            {% for tournoi in tournois %}
                <div class="tournament-item">
                    <div class="tournament-left">
                        <h3>{{ tournoi.nom }}</h3>
                        <p class="game-name">{{ tournoi.jeu ? tournoi.jeu.nom : 'â€”' }}</p>
                        <p class="dates">
                            <i class="icon">ðŸ“…</i>
                            {{ tournoi.dateDebut|date('d M Y') }} - {{ tournoi.dateFin|date('d M Y') }}
                        </p>
                        {# Liste des Ã©quipes inscrites (aperÃ§u) #}
                        {% set equipesListe = equipesParTournoi[tournoi.id] ?? [] %}
                        {% set equipesCount = equipesListe|length %}
                        {% if equipesCount > 0 %}
                            <div class="team-list-preview" style="margin-top:10px;display:flex;gap:8px;flex-wrap:wrap;">
                                {% for equipe in equipesListe|slice(0,3) %}
                                    <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" class="team-chip small">{{ equipe.nom }}</a>
                                {% endfor %}
                                {% if equipesCount > 3 %}
                                    <span class="team-chip small">+{{ equipesCount - 3 }} autres</span>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="tournament-middle">
                        <div class="info-box">
                            <span class="label">Participants</span>
                            <span class="value">{{ equipesCount }}/{{ tournoi.maxParticipants ?: 'â€”' }}</span>
                        </div>
                        <div class="info-box">
                            <span class="label">Cagnotte</span>
                            <span class="value">{{ tournoi.cagnotte is not null ? (tournoi.cagnotte ~ 'â‚¬') : '0â‚¬' }}</span>
                        </div>
                    </div>
                    <div class="tournament-right">
                        {% set raw = tournoi.statut|default('') %}
                        {% set slug = raw|lower
                            |replace({' ':'_','Ã‰':'e','Ã©':'e','Ã¨':'e','Ãª':'e','Ã ':'a','Ã¡':'a','Ã¢':'a','Ã¹':'u','Ã»':'u','Ã§':'c'}) %}
                        {% if slug matches '/termin.*/' %}{% set slug = 'termine' %}{% endif %}
                        <span class="status status-badge status-{{ slug }}">
                            {% if slug == 'en_attente' %}
                                <i class="fas fa-clock icon"></i> En attente
                            {% elseif slug == 'en_cours' %}
                                <i class="fas fa-spinner fa-pulse icon"></i> En cours
                            {% elseif slug == 'termine' %}
                                <i class="fas fa-check icon"></i> TerminÃ©
                            {% else %}
                                {{ raw }}
                            {% endif %}
                        </span>

                        {# Bouton d'inscription ou Matchs selon le statut #}
                        {% set allowed = slug not in ['en_cours', 'encours', 'termine'] %}
                        {% set showMatchs = slug in ['en_cours', 'encours', 'termine'] %}
                        {% if allowed %}
                            <a href="{{ path('app_tournoi_register', {'id': tournoi.id}) }}" class="btn-details">S'inscrire</a>
                        {% else %}
                            <button class="btn-details disabled" disabled>Inscription fermÃ©e</button>
                        {% endif %}
                        {% if showMatchs %}
                            <a href="{{ path('app_match_game_by_tournoi', {'tournoiId': tournoi.id}) }}" class="btn-details btn-matchs">Matchs</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .tournaments-list {
        background: linear-gradient(135deg, #0f0c29, #302b63);
        padding: 60px 20px;
        min-height: 100vh;
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
        color: white;
    }

    .section-header h1 {
        font-size: 3em;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #ff006e, #8338ec);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .section-header p {
        font-size: 1.2em;
        color: rgba(255, 255, 255, 0.7);
    }

    .filters {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
        flex-wrap: wrap;
    }

    .search-input {
        padding: 12px 20px;
        border-radius: 25px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.05);
        color: white;
        font-size: 1em;
    }

    .status-filter-btn{
        padding:8px 12px;
        border-radius:20px;
        border:1px solid rgba(255,255,255,0.12);
        background:transparent;
        color:rgba(255,255,255,0.9);
        cursor:pointer;
        font-weight:600;
        transition: all .15s ease;
    }
    .status-filter-btn:hover{ transform: translateY(-3px); box-shadow: 0 8px 20px rgba(0,0,0,0.25); }
    .status-filter-btn.active{
        background: linear-gradient(135deg,#ff006e,#8338ec);
        color:white;
        border-color:transparent;
        box-shadow: 0 10px 30px rgba(131,56,236,0.22);
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .search-input:focus, .filter-select:focus {
        outline: none;
        border-color: #ff006e;
        box-shadow: 0 0 15px rgba(255, 0, 110, 0.3);
    }

    .tournaments-list-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .tournament-item {
        display: grid;
        grid-template-columns: 1fr 1.5fr 1fr;
        gap: 30px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 25px;
        color: white;
        transition: all 0.3s ease;
        align-items: center;
    }

    .tournament-item:hover {
        transform: translateX(10px);
        border-color: #ff006e;
        background: rgba(255, 0, 110, 0.05);
        box-shadow: 0 15px 35px rgba(255, 0, 110, 0.2);
    }

    .tournament-left h3 {
        font-size: 1.4em;
        margin: 0 0 10px 0;
    }

    .game-name {
        color: #ff006e;
        margin: 5px 0 15px 0;
        font-weight: bold;
    }

    .dates {
        color: rgba(255, 255, 255, 0.6);
        margin: 0;
    }

    .tournament-middle {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 15px;
    }

    .info-box {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 12px;
        text-align: center;
    }

    .label {
        display: block;
        font-size: 0.85em;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 5px;
    }

    .value {
        display: block;
        font-size: 1.2em;
        font-weight: bold;
        color: #ff006e;
    }

    .tournament-right {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    /* Nouveau design des badges de statut */
    .status-badge{
        display:inline-flex;
        align-items:center;
        gap:10px;
        padding:8px 14px;
        border-radius:14px;
        font-weight:700;
        font-size:0.9rem;
        line-height:1;
        color:#0b1220;
        background:linear-gradient(180deg, rgba(255,255,255,0.95), rgba(250,250,250,0.9));
        box-shadow: 0 6px 18px rgba(2,6,23,0.15);
        border:1px solid rgba(0,0,0,0.06);
    }
    .status-badge .icon{ font-size:0.95rem; color:inherit; opacity:0.95; }

    .status-en_attente{ background: linear-gradient(90deg,#fff3cd,#fff0b8); color:#8a5a00; border-color: #ffe8a6; }
    .status-en_cours{ background: linear-gradient(90deg,#e7f5ff,#d7f0ff); color:#054a54; border-color: #bfe9ff; }
    .status-termine, .status-termine{ background: linear-gradient(90deg,#dff3e6,#cfead1); color:#0f5132; border-color:#b7d6c4; }
    .status-default{ background:#f1f3f5; color:#374151; border-color:#e5e7eb; }

    /* petite pastille Ã  gauche */
    .status-badge::before{
        content: "";
        width:9px;
        height:9px;
        border-radius:50%;
        display:inline-block;
        margin-left:-6px;
        margin-right:6px;
        box-shadow: inset 0 0 6px rgba(0,0,0,0.08);
    }
    .status-en_attente::before{ background:#f0b429; }
    .status-en_cours::before{ background:#2196f3; }
    .status-termine::before{ background:#4caf50; }

    .btn-details {
        background: linear-gradient(135deg, #ff006e, #8338ec);
        color: white;
        padding: 10px 25px;
        border-radius: 20px;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        font-weight: bold;
    }

    .btn-details:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 25px rgba(255, 0, 110, 0.3);
    }

    .btn-details.btn-matchs {
        background: linear-gradient(135deg, #2196f3, #1976d2);
    }

    @media (max-width: 1024px) {
        .tournament-item {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .tournament-middle {
            grid-template-columns: repeat(3, 1fr);
        }

        .tournament-right {
            flex-direction: row;
            justify-content: space-between;
        }
    }

    @media (max-width: 600px) {
        .section-header h1 {
            font-size: 2em;
        }

        .filters {
            flex-direction: column;
        }

        .search-input, .filter-select {
            width: 100%;
        }

        .tournament-middle {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const tournamentItems = document.querySelectorAll('.tournament-item');
    const statusButtons = document.querySelectorAll('.status-filter-btn');

    function normalizeStatus(raw) {
        if(!raw) return '';
        return raw.toString().toLowerCase()
            .replace(/[Ã©Ã¨ÃªÃ«]/g,'e')
            .replace(/[Ã Ã¡Ã¢Ã£Ã¤]/g,'a')
            .replace(/[Ã¹ÃºÃ»Ã¼]/g,'u')
            .replace(/Ã§/g,'c')
            .replace(/\s+/g,'_')
            .replace(/[^a-z0-9_]/g,'')
            .replace(/_+/g,'_')
            .replace(/^_|_$/g,'');
    }

    function filterTournaments(selectedStatusSlug) {
        const sel = (selectedStatusSlug || '').trim();
        const searchTerm = searchInput.value.toLowerCase().trim();

        if (tournamentItems.length === 0) return;

        tournamentItems.forEach(item => {
            try {
                const statusElement = item.querySelector('.status');
                const nameElement = item.querySelector('.tournament-left h3');
                if (!statusElement || !nameElement) return;

                const rawStatus = statusElement.textContent || statusElement.innerText || '';
                const itemStatus = normalizeStatus(rawStatus);
                const itemName = nameElement.textContent.toLowerCase().trim();

                const statusMatches = !sel || itemStatus === sel;
                const nameMatches = !searchTerm || itemName.includes(searchTerm);

                item.style.display = (statusMatches && nameMatches) ? '' : 'none';
            } catch (e) {
                console.error('Error filtering item:', e);
            }
        });
    }

    // Buttons behaviour
    statusButtons.forEach(btn => {
        btn.addEventListener('click', function(){
            const s = btn.dataset.status || '';
            const already = btn.classList.contains('active');
            // reset active on all
            statusButtons.forEach(b => b.classList.remove('active'));
            if(!already){
                btn.classList.add('active');
                filterTournaments(s);
            } else {
                // show all
                document.querySelectorAll('.status-filter-btn')[0].classList.add('active'); // Tous
                filterTournaments('');
            }
        });
    });

    // Clicking on a status span filters by that status
    document.querySelectorAll('.status').forEach(span => {
        span.style.cursor = 'pointer';
        span.addEventListener('click', function(){
            const s = normalizeStatus(span.textContent || span.innerText || '');
            // activate matching button
            statusButtons.forEach(b => b.classList.toggle('active', (b.dataset.status||'') === s));
            filterTournaments(s);
        });
    });

    // Search input listeners
    searchInput.addEventListener('input', function(){
        // find current active status
        const active = document.querySelector('.status-filter-btn.active');
        const s = active ? (active.dataset.status || '') : '';
        filterTournaments(s);
    });

    // initial
    filterTournaments('');
});
</script>
{% endblock %}
