<script>
document.addEventListener('DOMContentLoaded', function() {
    const toggleBtn = document.getElementById('tournament-chat-toggle');
    const chatBox = document.getElementById('tournament-chat-box');
    const closeBtn = document.getElementById('chat-close');
    const messagesDiv = document.getElementById('tournament-chat-messages');
    const inputField = document.getElementById('tournament-chat-input');
    const sendBtn = document.getElementById('chat-send');
    
    // Toggle chat avec animation
    toggleBtn.addEventListener('click', function() {
        if (chatBox.style.display === 'none' || chatBox.style.display === '') {
            chatBox.style.display = 'flex';
            inputField.focus();
        } else {
            chatBox.style.display = 'none';
        }
    });
    
    closeBtn.addEventListener('click', function() {
        chatBox.style.display = 'none';
    });
    
    // Quick action buttons
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('quick-btn')) {
            const message = e.target.getAttribute('data-msg');
            inputField.value = message;
            sendMessage();
        }
    });
    
    // Send message function am√©lior√©e
    function sendMessage() {
        const message = inputField.value.trim();
        if (!message) return;
        
        // Afficher message utilisateur avec animation
        const userMsgDiv = document.createElement('div');
        userMsgDiv.className = 'user-message';
        userMsgDiv.innerHTML = `<span>${escapeHtml(message)}</span>`;
        messagesDiv.appendChild(userMsgDiv);
        
        inputField.value = '';
        messagesDiv.scrollTop = messagesDiv.scrollHeight;
        
        // Afficher indicateur de frappe
        const typingId = 'typing-' + Date.now();
        const typingDiv = document.createElement('div');
        typingDiv.className = 'bot-message';
        typingDiv.id = typingId;
        typingDiv.innerHTML = `
            <div class="typing-indicator">
                <span></span><span></span><span></span>
            </div>
        `;
        messagesDiv.appendChild(typingDiv);
        messagesDiv.scrollTop = messagesDiv.scrollHeight;
        
        // Envoyer au serveur
        fetch('{{ path('tournament_assistant_message') }}', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({message: message})
        })
        .then(res => res.json())
        .then(data => {
            // Supprimer l'indicateur de frappe
            document.getElementById(typingId).remove();
            
            // Afficher r√©ponse du bot avec animation
            const botMsgDiv = document.createElement('div');
            botMsgDiv.className = 'bot-message';
            botMsgDiv.innerHTML = `<span>${formatBotResponse(data.response)}</span>`;
            messagesDiv.appendChild(botMsgDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        })
        .catch(error => {
            document.getElementById(typingId).remove();
            const errorDiv = document.createElement('div');
            errorDiv.className = 'bot-message';
            errorDiv.innerHTML = `
                <span style="color: #ef4444; border-color: #fecaca;">
                    ‚ùå Erreur de connexion. R√©essaye dans un instant !
                </span>
            `;
            messagesDiv.appendChild(errorDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        });
    }
    
    // Format bot response (ajoute des emojis et du style)
    function formatBotResponse(text) {
        // Escape HTML d'abord
        text = escapeHtml(text);
        
        // Ajouter des sauts de ligne pour une meilleure lisibilit√©
        text = text.replace(/\n/g, '<br>');
        
        return text;
    }
    
    sendBtn.addEventListener('click', sendMessage);
    
    inputField.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            sendMessage();
        }
    });
    
    // Escape HTML pour s√©curit√©
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
    
    // Auto-focus sur l'input quand la fen√™tre s'ouvre
    const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
            if (mutation.target.style.display === 'flex') {
                setTimeout(() => inputField.focus(), 100);
            }
        });
    });
    
    observer.observe(chatBox, {
        attributes: true,
        attributeFilter: ['style']
    });
});
</script>

