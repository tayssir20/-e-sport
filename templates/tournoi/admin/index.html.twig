{% extends 'admin/dashboard.html.twig' %}

{% block title %}Gestion des tournois - Admin{% endblock %}

{% block admin_content %}
<style>
    .stat-en-attente { color: #f59e0b !important; }
    .stat-card .text-muted,
    .stat-card .stat-label {
        color: #e2e8f0 !important;
        font-weight: 500;
    }
</style>
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="page-title">Tournois</h1>
            <p class="page-subtitle">Gérer les tournois e-sport</p>
        </div>
        <a href="{{ path('admin_tournoi_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Nouveau tournoi
        </a>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card text-center p-3">
                <div class="h2 fw-bold text-primary">{{ stats.total }}</div>
                <div class="stat-label">Total tournois</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card text-center p-3">
                <div class="h2 fw-bold stat-en-attente">{{ stats.en_attente }}</div>
                <div class="stat-label">En attente</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card text-center p-3">
                <div class="h2 fw-bold text-info">{{ stats.en_cours }}</div>
                <div class="stat-label">En cours</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card text-center p-3">
                <div class="h2 fw-bold text-secondary">{{ stats.termine }}</div>
                <div class="stat-label">Terminés</div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Liste des tournois</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Jeu</th>
                        <th>Statut</th>
                        <th>Début</th>
                        <th>Participants</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tournoi in tournois %}
                    <tr>
                        <td>#{{ tournoi.id }}</td>
                        <td><div class="fw-bold">{{ tournoi.nom }}</div></td>
                        <td>{{ tournoi.jeu ? tournoi.jeu.nom : '—' }}</td>
                        <td>
                            {% set statut_lower = tournoi.statut|default('')|lower %}
                            <span class="badge {% if 'attente' in statut_lower %}bg-warning text-dark{% elseif 'cours' in statut_lower %}bg-info{% elseif 'termin' in statut_lower %}bg-secondary{% else %}bg-primary{% endif %}">
                                {{ tournoi.statut }}
                            </span>
                        </td>
                        <td>{{ tournoi.dateDebut ? tournoi.dateDebut|date('d/m/Y') : '—' }}</td>
                        <td>{{ tournoi.equipes|length }} / {{ tournoi.maxParticipants ?? '—' }}</td>
                        <td class="text-end">
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="{{ path('app_tournoi_show', {'id': tournoi.id}) }}" class="action-btn view" title="Voir sur le site" target="_blank">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                                <a href="{{ path('admin_tournoi_show', {'id': tournoi.id}) }}" class="action-btn view" title="Détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('admin_tournoi_edit', {'id': tournoi.id}) }}" class="action-btn edit" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('admin_tournoi_delete', {'id': tournoi.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer ce tournoi ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournoi.id) }}">
                                    <button type="submit" class="action-btn delete" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr><td colspan="7" class="text-center py-4">Aucun tournoi.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
