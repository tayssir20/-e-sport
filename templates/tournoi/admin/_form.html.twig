<style>
    .admin-form .form-group {
        margin-bottom: 1.5rem;
    }

    .admin-form .form-control,
    .admin-form .form-select {
        color: #e2e8f0;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.2s ease;
        font-size: 0.95rem;
    }

    .admin-form label {
        color: #e2e8f0;
        font-weight: 500;
        margin-bottom: 0.75rem;
        display: block;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-group-full {
        grid-column: 1 / -1;
    }

    .form-btn-group {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(148, 163, 184, 0.1);
    }

    .admin-form .invalid-feedback,
    .admin-form .form-error,
    .admin-form ul li {
        display: block;
        color: #f87171 !important;
        font-size: 0.95rem;
        font-weight: 600;
        margin-top: 0.5rem;
        list-style: none;
        padding-left: 0;
    }
    .admin-form ul {
        list-style: none;
        padding-left: 0;
        margin: 0.5rem 0 0 0;
    }
</style>

