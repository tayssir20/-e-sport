{% extends 'admin/dashboard.html.twig' %}

{% block title %}Nouveau tournoi - Admin{% endblock %}

{% block admin_content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="page-title">Nouveau tournoi</h1>
            <p class="page-subtitle">Créer un nouveau tournoi e-sport</p>
        </div>
