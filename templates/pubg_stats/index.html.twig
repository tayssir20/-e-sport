{% extends 'base.html.twig' %}

{% block title %}PUBG Stats{% endblock %}

{% block body %}
<style>
    .pubg-hero {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a1a 0%, #f97316 100%);
        padding: 80px 20px;
        position: relative;
        overflow: hidden;
    }

    .search-container {
        max-width: 600px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .pubg-title {
        text-align: center;
        color: #fff;
        font-size: 4rem;
        font-weight: 900;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 5px;
        text-shadow: 0 0 30px #f9731680;
    }

    .pubg-subtitle {
        text-align: center;
        color: #f97316;
        font-size: 1.5rem;
        margin-bottom: 50px;
        font-weight: 600;
    }

    .search-box {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        border: 2px solid #f97316;
        border-radius: 50px;
        padding: 30px;
        box-shadow: 0 20px 60px rgba(249,115,22,0.3);
    }

    .search-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .form-row {
        display: flex;
        gap: 15px;
    }

    .search-input {
        flex: 1;
        padding: 18px 30px;
        border: 2px solid rgba(249,115,22,0.3);
        border-radius: 50px;
        background: rgba(26,26,26,0.8);
        color: #fff;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #f97316;
        box-shadow: 0 0 20px rgba(249,115,22,0.5);
    }

    .search-input::placeholder {
        color: rgba(255,255,255,0.5);
    }

    .platform-select {
        padding: 18px 30px;
        border: 2px solid rgba(249,115,22,0.3);
        border-radius: 50px;
        background: rgba(26,26,26,0.8);
        color: #fff;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .platform-select:focus {
        outline: none;
        border-color: #f97316;
        box-shadow: 0 0 20px rgba(249,115,22,0.5);
    }

    .search-button {
        padding: 18px 40px;
        background: linear-gradient(135deg, #f97316, #ea580c);
        border: none;
        border-radius: 50px;
        color: #fff;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .search-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(249,115,22,0.6);
    }

    .info-box {
        background: rgba(249,115,22,0.1);
        border: 1px solid #f97316;
        border-radius: 15px;
        padding: 20px;
        margin-top: 30px;
        text-align: center;
    }

    .info-text {
        color: rgba(255,255,255,0.8);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 60px;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .feature-card {
        background: rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(249,115,22,0.3);
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        transition: all 0.3s ease;
    }

    .feature-card:hover {
        background: rgba(249,115,22,0.1);
        border-color: #f97316;
        transform: translateY(-5px);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    .feature-title {
        color: #fff;
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .feature-desc {
        color: rgba(255,255,255,0.7);
        font-size: 0.9rem;
    }

    .alert {
        max-width: 600px;
        margin: 20px auto;
        padding: 15px 25px;
        border-radius: 10px;
        text-align: center;
    }

    .alert-error {
        background: rgba(239,68,68,0.2);
        border: 1px solid #ef4444;
        color: #fca5a5;
    }
</style>

<div class="pubg-hero">
    <div class="search-container">
        <h1 class="pubg-title">ü™Ç PUBG</h1>
        <p class="pubg-subtitle">Recherchez vos statistiques</p>

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> {{ message }}
            </div>
        {% endfor %}

        <div class="search-box">
            <form action="{{ path('app_pubg_search') }}" method="POST" class="search-form">
                <input 
                    type="text" 
                    name="player_name" 
                    class="search-input" 
                    placeholder="Nom du joueur (sensible √† la casse)"
                    required
                >
                <div class="form-row">
                    <select name="platform" class="platform-select">
                        <option value="steam">PC (Steam)</option>
                        <option value="xbox">Xbox</option>
                        <option value="psn">PlayStation</option>
                        <option value="kakao">Kakao</option>
                    </select>
                    <button type="submit" class="search-button">
                        <i class="fas fa-search"></i> Rechercher
                    </button>
                </div>
            </form>

            <div class="info-box">
                <p class="info-text">
                    üí° Entrez le <strong>nom exact du joueur</strong> et s√©lectionnez la <strong>plateforme</strong>
                </p>
            </div>
        </div>
    </div>

    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon">üèÜ</div>
            <div class="feature-title">Rang Ranked</div>
            <div class="feature-desc">Classement comp√©titif</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">üçó</div>
            <div class="feature-title">Chicken Dinners</div>
            <div class="feature-desc">Victoires totales</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">üíÄ</div>
            <div class="feature-title">K/D Ratio</div>
            <div class="feature-desc">Kills par mort</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">üìä</div>
            <div class="feature-title">Stats D√©taill√©es</div>
            <div class="feature-desc">Performances compl√®tes</div>
        </div>
    </div>
</div>

{% endblock %}
