    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Category Information</h5>
    </div>
    <div class="card-body">
        {{ include('category/admin/_form.html.twig') }}
    </div>
</div>
{% endblock %}
