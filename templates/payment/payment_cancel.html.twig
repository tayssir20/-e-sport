{% extends 'base.html.twig' %}
{% block title %}Payment Cancelled - e-sports.tn{% endblock %}

{% block body %}
<style>
.cancel-wrap {
    min-height: 100vh;
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    display: flex; align-items: center; justify-content: center;
    padding: 60px 0;
}
.cancel-card {
    background: #fff; border-radius: 20px; padding: 60px 50px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.25);
    text-align: center; max-width: 500px; width: 100%;
}
.icon-circle {
    width: 90px; height: 90px; border-radius: 50%;
    background: #dc3545;
    display: flex; align-items: center; justify-content: center;
    margin: 0 auto 30px;
    animation: shake 0.5s ease;
}
@keyframes shake {
    0%,100% { transform: translateX(0); }
    25% { transform: translateX(-8px); }
    75% { transform: translateX(8px); }
}
.icon-circle i { font-size: 44px; color: #fff; }
</style>

<div class="cancel-wrap">
    <div class="cancel-card">
        <div class="icon-circle">
            <i class="fas fa-times"></i>
        </div>

        <h1 class="fw-bold mb-2" style="font-size:2rem;">Payment Cancelled</h1>
        <p class="text-muted mb-4">No charges were made. Your cart is still saved.</p>

        <div class="alert alert-info text-start">
            <i class="fas fa-info-circle me-2"></i>
            Order <strong>{{ order.orderNumber }}</strong> was cancelled.
        </div>

        <div class="mt-4 d-flex gap-3 justify-content-center">
            <a href="{{ path('app_cart_index') }}" class="btn btn-primary px-4">Back to Cart</a>
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary px-4">Keep Shopping</a>
        </div>
    </div>
</div>
{% endblock %}
