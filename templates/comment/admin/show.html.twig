{% extends 'admin/dashboard.html.twig' %}

{% block title %}Comment Details - Admin{% endblock %}

{% block admin_content %}
<style>
    .comment-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 2rem;
    }

    .comment-title h1 {
        margin: 0;
        color: #fff;
    }

    .comment-actions {
        display: flex;
        gap: 0.75rem;
    }

    .comment-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .card-panel {
        background: rgba(15, 23, 42, 0.7);
        border: 1px solid rgba(148, 163, 184, 0.1);
        border-radius: var(--radius);
        padding: 2rem;
    }

    .meta-list .meta-item {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
    }

    .meta-label { color: #94a3b8; font-weight: 500; }
    .meta-value { color: #fff; font-weight: 600; }

    @media (max-width: 768px) {
        .comment-content { grid-template-columns: 1fr; }
        .comment-header { flex-direction: column; }
        .comment-actions { width: 100%; flex-wrap: wrap; margin-top: 1rem; }
    }
</style>

<div class="comment-header">
    <div class="comment-title">
        <h1 class="page-title">Comment Details</h1>
        <p class="page-subtitle">View and manage this comment</p>
    </div>
    <div class="comment-actions">
        <a href="{{ path('admin_comment_index') }}" class="btn btn-outline">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>
</div>

<div class="comment-content">
    <div class="card-panel">
        <h5 class="mb-3">Author</h5>
        <p class="mb-1"><strong>{{ comment.user ? (comment.user.nom ?: comment.user.email) : '—' }}</strong></p>
        <p class="text-muted">{{ comment.user ? (comment.user.email ?: '') : '' }}</p>
    </div>

    <div class="card-panel">
        <h5 class="mb-3">Details</h5>
        <div class="meta-list">
            <div class="meta-item"><span class="meta-label">Blog</span><span class="meta-value">{{ comment.blog ? (comment.blog.title ?: '—') : '—' }}</span></div>
            <div class="meta-item"><span class="meta-label">Comment ID</span><span class="meta-value">#{{ comment.id }}</span></div>
            <div class="meta-item"><span class="meta-label">Created At</span><span class="meta-value">{{ comment.createdAt ? comment.createdAt|date('d M Y, H:i') : '—' }}</span></div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="mb-3">Content</h5>
        <p>{{ comment.content }}</p>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="background: rgba(15, 23, 42, 0.95); border: 1px solid rgba(148, 163, 184, 0.1);">
            <div class="modal-header" style="border-bottom: 1px solid rgba(148, 163, 184, 0.1);">
                <h5 class="modal-title" style="color: #fff;">Delete Comment</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" style="color: #e2e8f0;">
                <p>Are you sure you want to delete this comment by <strong>{{ comment.user ? (comment.user.nom ?: comment.user.email) : '—' }}</strong>?</p>
                <p style="color: #94a3b8; font-size: 0.875rem;">This action cannot be undone.</p>
            </div>
            <div class="modal-footer" style="border-top: 1px solid rgba(148, 163, 184, 0.1);">
                <button type="button" class="btn btn-outline" data-bs-dismiss="modal">Cancel</button>
                <form method="POST" action="{{ path('admin_comment_delete', {'id': comment.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
