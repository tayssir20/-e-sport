{% extends 'admin/dashboard.html.twig' %}

{% block title %}Edit Comment - Admin{% endblock %}

{% block admin_content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="page-title">Edit Comment</h1>
        </div>
        <a href="{{ path('admin_comment_index') }}" class="btn btn-outline">
            <i class="fas fa-arrow-left me-2"></i>Back to Comments
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Comment</h5>
    </div>
    <div class="card-body">
        {{ include('comment/admin/_form.html.twig') }}
    </div>
</div>

<div class="danger-zone">
    <div class="danger-title">
        <i class="fas fa-exclamation-triangle me-2"></i>Danger Zone
    </div>
    {{ include('comment/admin/_delete_form.html.twig') }}
</div>
{% endblock %}
