<style>
    .delete-form-wrapper {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .delete-form-wrapper .btn-danger {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border: none;
        color: white;
        padding: 0.625rem 1.25rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

    .delete-form-wrapper .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        color: white;
    }
</style>

{% set _id = (comment is defined) ? comment.id : (Comment is defined ? Comment.id : '') %}
<div class="delete-form-wrapper">
    <form method="post" action="{{ path('admin_comment_delete', {'id': _id}) }}" 
          onsubmit="return confirm('Are you sure you want to delete this comment? This action cannot be undone.');">
        <input type="hidden" name="_token" value="{{ _id ? csrf_token('delete' ~ _id) : '' }}">
        <button type="submit" class="btn-danger">
            <i class="fas fa-trash"></i> Delete Comment
        </button>
    </form>
</div>
