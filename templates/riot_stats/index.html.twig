{% extends 'base.html.twig' %}

{% block title %}League of Legends Stats{% endblock %}

{% block body %}
<style>
    .stats-hero {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        padding: 100px 0 80px;
        position: relative;
        overflow: hidden;
    }
    
    .stats-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('https://images.contentstack.io/v3/assets/blt731acb42bb3d1659/blt370b35da5f030c87/5db05fa8347d1c6baa57be25/RiotX_ChampionTheme_Promo.jpg') center/cover;
        opacity: 0.1;
    }

    .stats-search-container {
        position: relative;
        z-index: 2;
        max-width: 700px;
        margin: 0 auto;
    }

    .stats-title {
        font-size: 3rem;
        font-weight: 900;
        color: #fff;
        text-align: center;
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 0 0 30px rgba(220,38,38,0.5);
    }

    .stats-subtitle {
        text-align: center;
        color: #94a3b8;
        font-size: 1.1rem;
        margin-bottom: 40px;
    }

    .search-box {
        background: rgba(30, 41, 59, 0.8);
        border: 2px solid rgba(220, 38, 38, 0.3);
        border-radius: 50px;
        padding: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

    .search-box:focus-within {
        border-color: #dc2626;
        box-shadow: 0 0 30px rgba(220, 38, 38, 0.3);
    }

    .search-box input {
        flex: 1;
        background: transparent;
        border: none;
        color: #fff;
        font-size: 1.1rem;
        padding: 15px 25px;
        outline: none;
    }

    .search-box input::placeholder {
        color: #64748b;
    }

    .search-box button {
        background: linear-gradient(135deg, #dc2626, #b91c1c);
        border: none;
        color: #fff;
        padding: 15px 40px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .search-box button:hover {
        background: linear-gradient(135deg, #b91c1c, #991b1b);
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(220, 38, 38, 0.4);
    }

    .search-hint {
        text-align: center;
        color: #64748b;
        font-size: 0.9rem;
        margin-top: 15px;
    }

    .features-section {
        padding: 80px 0;
        background: #0f172a;
    }

    .feature-card {
        background: linear-gradient(145deg, rgba(30,41,59,0.8), rgba(15,23,42,0.8));
        border: 1px solid rgba(220,38,38,0.2);
        border-radius: 20px;
        padding: 40px 30px;
        text-align: center;
        transition: all 0.3s ease;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        border-color: #dc2626;
        box-shadow: 0 20px 40px rgba(220,38,38,0.2);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 20px;
        background: linear-gradient(135deg, #dc2626, #f59e0b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .feature-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 15px;
    }

    .feature-desc {
        color: #94a3b8;
        line-height: 1.6;
    }
</style>

<div class="stats-hero">
    <div class="container">
        <div class="stats-search-container">
            <h1 class="stats-title">League of Legends Stats</h1>
            <p class="stats-subtitle">Recherchez vos statistiques et performances</p>
            
            <form method="post" action="{{ path('app_riot_stats_search') }}">
                <div class="search-box">
                    <input 
                        type="text" 
                        name="summoner_name" 
                        placeholder="Entrez votre nom (ex: Player#EUW)" 
                        required
                        autocomplete="off"
                    >
                    <button type="submit">
                        <i class="fas fa-search"></i> Rechercher
                    </button>
                </div>
                <p class="search-hint">
                    üí° Format: NomDuJoueur#TAG (exemple: Hide on bush#KR1)
                </p>
            </form>
        </div>
    </div>
</div>

<section class="features-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">üìä</div>
                    <h3 class="feature-title">Statistiques D√©taill√©es</h3>
                    <p class="feature-desc">
                        Consultez vos stats de ranked, votre niveau, et vos performances
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">üéÆ</div>
                    <h3 class="feature-title">Historique des Matchs</h3>
                    <p class="feature-desc">
                        Analysez vos derni√®res parties et suivez votre progression
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">üèÜ</div>
                    <h3 class="feature-title">Classement Ranked</h3>
                    <p class="feature-desc">
                        Visualisez votre rang et vos LP en Solo/Duo et Flex
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
