{% extends 'base.html.twig' %}

{% block title %}Erreur - Stats{% endblock %}

{% block body %}
<style>
    .error-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        padding: 40px 20px;
    }

    .error-card {
        background: rgba(30,41,59,0.8);
        border: 2px solid rgba(220,38,38,0.3);
        border-radius: 20px;
        padding: 50px;
        text-align: center;
        max-width: 600px;
        backdrop-filter: blur(10px);
    }

    .error-icon {
        font-size: 5rem;
        margin-bottom: 20px;
    }

    .error-title {
        font-size: 2rem;
        font-weight: 900;
        color: #fff;
        margin-bottom: 15px;
    }

    .error-message {
        color: #94a3b8;
        font-size: 1.1rem;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .error-btn {
        background: linear-gradient(135deg, #dc2626, #b91c1c);
        color: #fff;
        padding: 15px 40px;
        border-radius: 50px;
        text-decoration: none;
        display: inline-block;
        font-weight: 700;
        transition: all 0.3s ease;
    }

    .error-btn:hover {
        background: linear-gradient(135deg, #b91c1c, #991b1b);
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(220,38,38,0.4);
        color: #fff;
    }
</style>

<div class="error-container">
    <div class="error-card">
        <div class="error-icon">⚠️</div>
        <h1 class="error-title">{{ errorTitle|default('Erreur') }}</h1>
        <p class="error-message">{{ errorMessage|default('Une erreur est survenue lors de la récupération des données.') }}</p>
        <a href="{{ path('app_riot_stats') }}" class="error-btn">
            <i class="fas fa-arrow-left"></i> Retour à la recherche
        </a>
    </div>
</div>

{% endblock %}
