{% extends 'base.html.twig' %}

{% block title %}Live Streaming{% endblock %}

{% block body %}
<div style="max-width: 1100px; margin: auto; padding: 30px;">
    <h1 style="margin-bottom: 30px;">ğŸ¥ Live Streaming</h1>

    {# CSRF token pour les requÃªtes AJAX #}
    <script>
        const csrfToken = '{{ csrf_token('stream_react') }}';
    </script>

    {% if activeStream %}
        <div style="margin-bottom: 40px;">
            <h2>ğŸ”´ En Direct</h2>
            <video id="active-video" width="100%" height="500" controls autoplay></video>

            <div style="margin-top:20px;">
                <h3>ğŸ’¬ RÃ©actions rapides</h3>
                <div class="reaction-buttons" style="display:flex; gap:10px; margin-bottom:10px;">
                    <button onclick="sendReaction({{ activeStream.id }}, 'adore')" class="btn btn-danger">â¤ï¸ J'adore</button>
                    <button onclick="sendReaction({{ activeStream.id }}, 'aime')" class="btn btn-primary">ğŸ‘ J'aime</button>
                    <button onclick="sendReaction({{ activeStream.id }}, 'bravo')" class="btn btn-success">ğŸ‘ Bravo</button>
                </div>

                <div id="reaction-count-{{ activeStream.id }}" class="mt-2 small text-muted">
                    {% for type in ['adore','aime','bravo'] %}
                        {{ type }} : {{ activeStream.reactions|filter(r => r.type == type)|length }} &nbsp;
                    {% endfor %}
                </div>

                <h3 style="margin-top:20px;">ğŸ’¬ Commentaires</h3>
                <form id="reaction-form">
                    <textarea id="comment" placeholder="Ã‰crire un commentaire..." style="width:100%; padding:10px; margin-bottom:10px;"></textarea>
                    <button type="submit" style="padding:10px 20px;">Envoyer</button>
                </form>

                <div id="reaction-list" style="margin-top:20px;">
                    {% for reaction in activeStream.reactions %}
                        {% if reaction.comment %}
                            <div style="margin-bottom:10px;">
                                <strong>{{ reaction.username }}</strong> : {{ reaction.comment }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    {% else %}
        <div style="margin-bottom:40px;">
            <h2>Aucun live actif</h2>
        </div>
    {% endif %}

    <hr style="margin:40px 0;">

    <h2>ğŸ“ Autres vidÃ©os</h2>
    <div style="display:flex; flex-wrap:wrap; gap:20px; margin-top:20px;">
        {% for video in videos %}
            <div style="width:320px;">
                <video width="100%" height="200" controls>
                    <source src="{{ video.url }}" type="application/x-mpegURL">
                </video>

                <div class="reaction-buttons" style="display:flex; gap:5px; margin-top:5px;">
                    <button onclick="sendReaction({{ video.id }}, 'adore')" class="btn btn-danger btn-sm">â¤ï¸</button>
                    <button onclick="sendReaction({{ video.id }}, 'aime')" class="btn btn-primary btn-sm">ğŸ‘</button>
                    <button onclick="sendReaction({{ video.id }}, 'bravo')" class="btn btn-success btn-sm">ğŸ‘</button>
                </div>

                <div id="reaction-count-{{ video.id }}" class="mt-1 small text-muted">
                    {% for type in ['adore','aime','bravo'] %}
                        {{ type }} : {{ video.reactions|filter(r => r.type == type)|length }} &nbsp;
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <p>Aucune autre vidÃ©o disponible.</p>
        {% endfor %}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
<script>
// Lecture HLS
{% if activeStream %}
const video = document.getElementById('active-video');
if(Hls.isSupported()) {
    const hls = new Hls();
    hls.loadSource('{{ activeStream.url }}');
    hls.attachMedia(video);
    hls.on(Hls.Events.MANIFEST_PARSED,function() { video.play(); });
} else if(video.canPlayType('application/vnd.apple.mpegurl')) {
    video.src = '{{ activeStream.url }}';
    video.addEventListener('loadedmetadata',function(){ video.play(); });
}
{% endif %}

// Fonction AJAX pour les rÃ©actions rapides et commentaires
function sendReaction(streamId, type, comment = null) {
    fetch('/stream/react/' + streamId, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-CSRF-TOKEN': csrfToken
        },
        body: JSON.stringify({ type: type, comment: comment })
    })
    .then(res => res.json())
    .then(data => {
        if(data.error){
            console.error(data.error);
            return;
        }
        document.getElementById('reaction-count-' + streamId)
            .innerHTML = type + ' : ' + data.count;

        // Si c'est un commentaire, l'ajouter Ã  la liste
        if(comment){
            const list = document.getElementById('reaction-list');
            const div = document.createElement('div');
            div.innerHTML = "<strong>" + data.username + "</strong> : " + data.comment;
            list.appendChild(div);
            document.getElementById('comment').value = '';
        }
    })
    .catch(err => console.error(err));
}

// Formulaire de commentaire
{% if activeStream %}
document.getElementById('reaction-form').addEventListener('submit', function(e) {
    e.preventDefault();
    const comment = document.getElementById('comment').value;
    if(!comment.trim()) return;

    sendReaction({{ activeStream.id }}, 'comment', comment);
});
{% endif %}
</script>
{% endblock %}