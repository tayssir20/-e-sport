{% extends 'base.html.twig' %}

{% block title %}Valorant Stats{% endblock %}

{% block body %}
<style>
    .valorant-hero {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f1923 0%, #ff4655 100%);
        padding: 80px 20px;
        position: relative;
        overflow: hidden;
    }

    .valorant-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><text y="50" font-size="50" fill="%23ff465520">üéØ</text></svg>') repeat;
        opacity: 0.1;
        animation: float 20s linear infinite;
    }

    @keyframes float {
        0% { transform: translateY(0); }
        100% { transform: translateY(-100px); }
    }

    .search-container {
        max-width: 600px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    .valorant-title {
        text-align: center;
        color: #fff;
        font-size: 4rem;
        font-weight: 900;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 5px;
        text-shadow: 0 0 30px #ff465580;
    }

    .valorant-subtitle {
        text-align: center;
        color: #ff4655;
        font-size: 1.5rem;
        margin-bottom: 50px;
        font-weight: 600;
    }

    .search-box {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        border: 2px solid #ff4655;
        border-radius: 50px;
        padding: 30px;
        box-shadow: 0 20px 60px rgba(255,70,85,0.3);
    }

    .search-form {
        display: flex;
        gap: 15px;
    }

    .search-input {
        flex: 1;
        padding: 18px 30px;
        border: 2px solid rgba(255,70,85,0.3);
        border-radius: 50px;
        background: rgba(15,25,35,0.8);
        color: #fff;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #ff4655;
        box-shadow: 0 0 20px rgba(255,70,85,0.5);
    }

    .search-input::placeholder {
        color: rgba(255,255,255,0.5);
    }

    .search-button {
        padding: 18px 40px;
        background: linear-gradient(135deg, #ff4655, #ff1744);
        border: none;
        border-radius: 50px;
        color: #fff;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .search-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(255,70,85,0.6);
    }

    .example-players {
        margin-top: 30px;
        text-align: center;
    }

    .example-title {
        color: rgba(255,255,255,0.7);
        font-size: 0.9rem;
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .example-tags {
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .example-tag {
        background: rgba(255,70,85,0.2);
        border: 1px solid #ff4655;
        color: #ff4655;
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .example-tag:hover {
        background: #ff4655;
        color: #fff;
        transform: translateY(-2px);
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 60px;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .feature-card {
        background: rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,70,85,0.3);
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        transition: all 0.3s ease;
    }

    .feature-card:hover {
        background: rgba(255,70,85,0.1);
        border-color: #ff4655;
        transform: translateY(-5px);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 15px;
    }

    .feature-title {
        color: #fff;
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .feature-desc {
        color: rgba(255,255,255,0.7);
        font-size: 0.9rem;
    }

    .alert {
        max-width: 600px;
        margin: 20px auto;
        padding: 15px 25px;
        border-radius: 10px;
        text-align: center;
    }

    .alert-error {
        background: rgba(239,68,68,0.2);
        border: 1px solid #ef4444;
        color: #fca5a5;
    }
</style>

<div class="valorant-hero">
    <div class="search-container">
        <h1 class="valorant-title">üéØ Valorant</h1>
        <p class="valorant-subtitle">Recherchez vos statistiques</p>

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> {{ message }}
            </div>
        {% endfor %}

        <div class="search-box">
            <form action="{{ path('app_valorant_search') }}" method="POST" class="search-form">
                <input 
                    type="text" 
                    name="riot_id" 
                    class="search-input" 
                    placeholder="Nom#TAG (ex: TenZ#NA1)"
                    required
                    pattern="[^#]+#[^#]+"
                >
                <button type="submit" class="search-button">
                    <i class="fas fa-search"></i> Rechercher
                </button>
            </form>

            <div class="example-players">
                <div class="example-title">Joueurs de test</div>
                <div class="example-tags">
                    <span class="example-tag" onclick="document.querySelector('.search-input').value='TenZ#NA1'">TenZ#NA1</span>
                    <span class="example-tag" onclick="document.querySelector('.search-input').value='Shroud#NA1'">Shroud#NA1</span>
                    <span class="example-tag" onclick="document.querySelector('.search-input').value='ScreaM#6666'">ScreaM#6666</span>
                </div>
            </div>
        </div>
    </div>

    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon">üèÜ</div>
            <div class="feature-title">Rang Comp√©titif</div>
            <div class="feature-desc">Iron √† Radiant + RR</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">üìä</div>
            <div class="feature-title">Statistiques</div>
            <div class="feature-desc">K/D/A et performances</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">üéÆ</div>
            <div class="feature-title">Historique</div>
            <div class="feature-desc">Derniers matchs jou√©s</div>
        </div>
        <div class="feature-card">
            <div class="feature-icon">üéØ</div>
            <div class="feature-title">Pr√©cision</div>
            <div class="feature-desc">Headshot percentage</div>
        </div>
    </div>
</div>

{% endblock %}
