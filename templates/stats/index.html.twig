    }

    .api-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: rgba(255,255,255,0.05);
        padding: 4px 10px;
        border-radius: 15px;
        font-size: 0.7rem;
        color: #64748b;
        margin-top: 10px;
    }

    @media (max-width: 768px) {
        .stats-title {
            font-size: 2rem;
        }
        
