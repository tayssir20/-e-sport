{% extends 'admin/dashboard.html.twig' %}

{% block title %}Match Games Management - Admin{% endblock %}

{% block extra_css %}
<style>
    .stat-card {
        text-align: center;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
        z-index: -1;
    }

    .stat-card .number {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 0.5rem;
    }

    .stat-card .label {
        color: #94a3b8;
        font-weight: 500;
        font-size: 0.875rem;
    }

    .table {
        color: #e2e8f0;
    }

    .table thead th {
        font-weight: 600;
        border-bottom: 2px solid rgba(148, 163, 184, 0.1);
        color: #cbd5e1;
    }

    .table tbody tr {
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        transition: background 0.2s ease;
    }

    .table tbody tr:hover {
        background: rgba(99, 102, 241, 0.05);
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: var(--radius-sm);
        border: none;
        background: rgba(148, 163, 184, 0.1);
        color: #94a3b8;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .action-btn:hover {
        background: rgba(99, 102, 241, 0.15);
        color: var(--primary);
    }

    .action-btn.view:hover {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
    }

    .action-btn.edit:hover {
        background: rgba(245, 158, 11, 0.15);
        color: var(--warning);
    }

    .action-btn.delete:hover {
        background: rgba(239, 68, 68, 0.15);
        color: var(--danger);
    }

    .badge {
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
    }

    .badge-pending {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .badge-finished {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .badge-in-progress {
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
    }
</style>
{% endblock %}

{% block admin_content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="page-title">Match Games Management</h1>
        </div>
        <a href="{{ path('admin_match_game_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>New Match
        </a>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">{{ match_games|length }}</div>
                <div class="label">Total Matches</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">{{ match_games|filter(m => m.statut == 'Finished')|length }}</div>
                <div class="label">Finished</div>
            </div>
        </div>
      
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">{{ match_games|filter(m => m.statut == 'In Progress')|length }}</div>
                <div class="label">In Progress</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="number">{{ match_games|filter(m => m.statut == 'Pending')|length }}</div>
                <div class="label">Pending</div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Active Matches</h5>
        <div class="d-flex gap-2">
            <button class="btn btn-outline">
                <i class="fas fa-filter me-2"></i>Filter
            </button>
            <button class="btn btn-outline">
                <i class="fas fa-download me-2"></i>Export
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tournament</th>
                        <th>Teams</th>
                        <th>Score</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for match_game in match_games %}
                    <tr>
                        <td>
                            <div class="fw-medium">{{ match_game.tournoi.nom }}</div>
                            {% if match_game.tournoi.jeu %}
                            <small class="text-muted"><i class="fas fa-gamepad me-1"></i>{{ match_game.tournoi.jeu.nom }}</small>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <div class="fw-medium">{{ match_game.equipe1.nom }} vs {{ match_game.equipe2.nom }}</div>
                                    <small class="text-muted">{{ match_game.dateMatch|date('d M Y, H:i') }}</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if match_game.statut != 'Pending' %}
                                <span class="fw-bold">{{ match_game.scoreTeam1 }} - {{ match_game.scoreTeam2 }}</span>
                            {% else %}
                                <span class="badge badge-pending">{{ match_game.statut }}</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="{{ path('admin_match_game_show', {'id': match_game.id}) }}" 
                                   class="action-btn view" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('admin_match_game_edit', {'id': match_game.id}) }}" 
                                   class="action-btn edit" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="POST" 
                                      action="{{ path('admin_match_game_delete', {'id': match_game.id}) }}" 
                                      class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this match?')">          
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ match_game.id) }}">
                                    <button type="submit" class="action-btn delete" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-gamepad fa-3x text-muted"></i>
                            </div>
                            <h5 class="text-muted mb-3">No matches found</h5>
                            <p class="text-muted mb-4">Get started by creating your first match</p>
                            <a href="{{ path('admin_match_game_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-2"></i>Create Match
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
