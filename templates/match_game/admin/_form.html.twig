<style>
    .admin-form .form-group {
        margin-bottom: 1.5rem;
    }

    .admin-form .form-control,
    .admin-form .form-select {
        color: #e2e8f0;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.2s ease;
        font-size: 0.95rem;
    }

    .admin-form .form-control::placeholder,
    .admin-form .form-select {
        color: #94a3b8;
    }

    .admin-form .form-control:focus,
    .admin-form .form-select:focus {
        background: rgba(30, 41, 59, 0.7);
        border-color: #6366f1;
        color: #e2e8f0;
        box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.15);
    }

    .admin-form label {
        color: #e2e8f0;
        font-weight: 500;
        margin-bottom: 0.75rem;
        display: block;
    }

    .admin-form .form-text {
        color: #94a3b8;
        font-size: 0.875rem;
    }

    .admin-form .invalid-feedback {
        color: #ef4444;
        font-size: 0.875rem;
        display: block;
        margin-top: 0.25rem;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-btn-group {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(148, 163, 184, 0.1);
        flex-wrap: wrap;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
        padding: 0.625rem 1.25rem;
        transition: all 0.2s ease;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        color: white;
    }

    .btn-secondary {
        background: rgba(148, 163, 184, 0.1);
        color: #e2e8f0;
    }

    .btn-secondary:hover {
        background: rgba(148, 163, 184, 0.15);
        color: #e2e8f0;
    }

    @media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-btn-group {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<form method="post" class="admin-form" novalidate>
    <div class="form-grid">
        <div class="form-group">
            <label for="match_game1_equipe1" class="form-label">Team 1</label>
            {{ form_widget(form.equipe1) }}
            {% if form.equipe1.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.equipe1.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="match_game1_equipe2" class="form-label">Team 2</label>
            {{ form_widget(form.equipe2) }}
            {% if form.equipe2.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.equipe2.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="match_game_scoreTeam1" class="form-label">Score Team 1</label>
            {{ form_widget(form.scoreTeam1, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
            {% if form.scoreTeam1.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.scoreTeam1.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="match_game_scoreTeam2" class="form-label">Score Team 2</label>
            {{ form_widget(form.scoreTeam2, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
            {% if form.scoreTeam2.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.scoreTeam2.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="match_game_dateMatch" class="form-label">Match Date & Time</label>
            {{ form_widget(form.dateMatch, {'attr': {'class': 'form-control'}}) }}
            {% if form.dateMatch.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.dateMatch.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="match_game_tournoi" class="form-label">Tournament</label>
            {{ form_widget(form.Tournoi, {'attr': {'class': 'form-select'}}) }}
            {% if form.Tournoi.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.Tournoi.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="match_game_statut" class="form-label">Status</label>
            {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
            {% if form.statut.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.statut.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <div class="form-btn-group">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Save Match') }}
        </button>
        <a href="{{ path('admin_match_game_index') }}" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </div>

    {{ form_rest(form) }}
</form>
