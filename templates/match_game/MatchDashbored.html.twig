{# {% extends 'base.html.twig' %} #}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --primary: #6366f1;
        --secondary: #8b5cf6;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --sidebar: 260px;
        --radius: 12px;
        --radius-sm: 8px;
        --dark: #0f172a;
        --light: #f8fafc;
        --gray: #64748b;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: #e2e8f0;
        min-height: 100vh;
        overflow-x: hidden;
    }

    .navbar-admin {
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        padding: 1rem 0;
    }

    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        color: #fff;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar {
        width: var(--sidebar);
        height: calc(100vh - 72px);
        background: rgba(15, 23, 42, 0.8);
        position: fixed;
        top: 72px;
        border-right: 1px solid rgba(148, 163, 184, 0.1);
        backdrop-filter: blur(10px);
        padding: 2rem 0;
    }

    .sidebar .nav-link {
        color: #94a3b8;
        padding: 0.75rem 1.5rem;
        margin: 0.25rem 1rem;
        border-radius: var(--radius-sm);
        transition: all 0.2s ease;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
        color: #fff;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
    }

    .main-content {
        margin-left: var(--sidebar);
        padding: 2rem;
        min-height: calc(100vh - 72px);
    }

    .page-title {
        font-size: 1.875rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1rem;
    }

    .card {
        background: rgba(15, 23, 42, 0.7);
        border: 1px solid rgba(148, 163, 184, 0.1);
        border-radius: var(--radius);
        backdrop-filter: blur(10px);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        margin-bottom: 1.5rem;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    .card-header {
        background: transparent;
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        font-weight: 600;
        color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border: none;
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        color: white;
    }

    .badge {
        font-weight: 500;
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
    }

    .badge-success { background: var(--success); color: #fff; }
    .badge-warning { background: var(--warning); color: #000; }
    .badge-danger { background: var(--danger); color: #fff; }
    .badge-secondary { background: var(--gray); color: #fff; }

    .btn-action {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-sm);
        background: transparent;
        border: 1px solid rgba(148, 163, 184, 0.2);
        color: #94a3b8;
        transition: all 0.2s ease;
    }

    .btn-action:hover {
        background: rgba(255, 255, 255, 0.05);
        color: #fff;
        transform: translateY(-1px);
    }

    @media (max-width: 768px) {
        .sidebar { width: 100%; height: auto; position: static; padding: 1rem; }
        .main-content { margin-left: 0; padding: 1rem; }
    }
</style>
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-admin">
    <div class="container-fluid px-4">
        <a class="navbar-brand" href="{{ path('admin_dashboard') }}">
            <span>Match Dashboard</span>
        </a>
        {% if app.user %}
        <div class="dropdown">
            <a class="nav-link dropdown-toggle text-white d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
                <i class="fas fa-user-circle"></i>
                <span>{{ app.user.nom ?? 'Admin' }}</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="{{ path('admin_user_edit', {'id': app.user.id}) }}">
                    <i class="fas fa-user-edit me-2"></i>Edit Profile
                </a></li>
                <li><hr class="dropdown-divider my-2"></li>
                <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a></li>
            </ul>
        </div>
        {% endif %}
    </div>
</nav>

  <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-md-3 d-none d-md-block sidebar">
                <div class="sidebar-header">
                    <h6>Navigation</h6>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'admin_dashboard' ? 'active' : '' }}" 
                           href="{{ path('admin_dashboard') }}">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ 'admin_user' in app.request.get('_route') ? 'active' : '' }}" 
                           href="{{ path('admin_user_index') }}">
                            <i class="fas fa-users"></i>
                            <span>Users</span>
                        </a>
                    </li>
                
                   <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_product_index') }}">
                            <i class="fas fa-store"></i>
                            <span>Products</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_category_index') }}">
                            <i class="fas fa-trophy"></i>
                            <span>Categories</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href= "{{ path('app_match_game_index2') }}"> >
                            <i class="fas fa-users"></i>
                            <span> Match_games</span>
                        </a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_blog_index') }}">
                            <i class="fas fa-trophy"></i>
                            <span>Blogs</span>
                        </a>
                    </li>
                                         <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_comment_index') }}">
                            <i class="fas fa-comment"></i>
                            <span>Comments</span>
                        </a>
                    </li>

                    
                    <div class="sidebar-header mt-4">
                        <h6>System</h6>
                    </div>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-cog"></i>
                            <span>logout</span>
                        </a>
                    </li>
                    
                </ul>
            </div>

            
        </div>
    </div>

<li class="nav-item">
                        <a class="nav-link" href="{{ path('app_category_index') }}">
                            <i class="fas fa-trophy"></i>
                            <span>Categories</span>
                        </a>
                    </li>

                <li class="nav-item">
                    <a class="nav-link {{ 'app_match_game_index2' in app.request.get('_route') ? 'active' : '' }}" href="{{ path('app_match_game_index2') }}">
                        <i class="fas fa-gamepad"></i> Matches
                    </a>
                </li>
            </ul>
        </div>

        <main class="col-lg-10 col-md-9 ms-sm-auto main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-title">Match Center</h1>
                <a href="{{ path('app_match_game_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>New Match
                </a>
            </div>

            {% if match_games|length > 0 %}
            <div class="row">
                {% for match_game in match_games %}
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <span class="badge bg-primary">{{ match_game.tournoi.nom }}</span>
                                {% if match_game.tournoi.jeu %}
                                    <span class="badge bg-secondary"><i class="fas fa-gamepad"></i> {{ match_game.tournoi.jeu.nom }}</span>
                                {% endif %}
                            </div>
                            <small class="text-muted">{{ match_game.dateMatch|date('d M, H:i') }}</small>
                        </div>
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="text-center flex-fill">
                                <i class="fas fa-gamepad fa-2x mb-2"></i>
                                <strong>{{ match_game.equipe1.nom }}</strong>
                            </div>
                            <div class="text-center mx-2 fw-bold">
                                {% if match_game.statut != 'Pending' %}
                                    {{ match_game.scoreTeam1 }} - {{ match_game.scoreTeam2 }}
                                {% else %}
                                    VS
                                {% endif %}
                            </div>
                            <div class="text-center flex-fill">
                                <i class="fas fa-headset fa-2x mb-2"></i>
                                <strong>{{ match_game.equipe2.nom }}</strong>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <div>
                                {% if match_game.statut == 'Finished' %}
                                    <span class="badge badge-success">{{ match_game.statut }}</span>
                                {% elseif match_game.statut == 'In Progress' %}
                                    <span class="badge badge-warning">{{ match_game.statut }}</span>
                                {% else %}
                                    <span class="badge badge-secondary">{{ match_game.statut }}</span>
                                {% endif %}
                            </div>
                            <a href="{{ path('app_match_game_show', {'id': match_game.id}) }}" class="btn-action" title="View Details">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="fas fa-gamepad fa-3x text-muted mb-3"></i>
                <h4>No Matches Found</h4>
                <p class="text-muted">Start a new match to populate the center.</p>
                <a href="{{ path('app_match_game_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Match
                </a>
            </div>
            {% endif %}
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
