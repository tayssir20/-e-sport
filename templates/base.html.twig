<!-- Load Stats on Dropdown Open -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const tournoiDropdown = document.getElementById('tournoiDropdown');
    const statsContainer = document.getElementById('jeu-stats-dropdown');
    let statsLoaded = false;
    
    if (tournoiDropdown) {
        tournoiDropdown.addEventListener('click', function(e) {
            if (!statsLoaded) {
                // Charger les stats via AJAX
                fetch('{{ path('app_jeu_stats_dropdown') }}')
                    .then(response => response.text())
                    .then(html => {
                        statsContainer.innerHTML = html;
                        statsLoaded = true;
                    })
                    .catch(error => {
                        statsContainer.innerHTML = '<div class="loading-stats" style="color: #ef4444;">‚ùå Erreur de chargement</div>';
                    });
            }
        });
    }
});
</script>

